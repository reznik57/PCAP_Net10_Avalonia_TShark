<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <config>
    <!-- globalPackagesFolder omitted - NuGet uses platform default:
         Windows: %USERPROFILE%\.nuget\packages
         Linux/WSL: ~/.nuget/packages -->
    <!-- Limit concurrent HTTP requests to prevent file lock contention during restore -->
    <add key="maxHttpRequestsPerSource" value="2" />
    <!-- Disable vulnerable package check to reduce NU1900 warning noise -->
    <!-- Vulnerability checking is handled at build time via Directory.Build.props -->
    <add key="vulnerablePackageCheck" value="false" />
  </config>
  <packageSources>
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>
</configuration>
