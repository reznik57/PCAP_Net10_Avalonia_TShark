<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>
  <fallbackPackageFolders>
    <clear />
  </fallbackPackageFolders>
  <config>
    <!-- Use local packages folder to avoid long path issues -->
    <add key="globalPackagesFolder" value="packages" />
    <!-- Disable parallel processing to avoid file lock issues -->
    <add key="maxHttpRequestsPerSource" value="2" />
    <!-- Disable vulnerability checks to avoid NU1900 warnings -->
    <add key="vulnerablePackageCheck" value="false" />
  </config>
  <packageRestore>
    <!-- Enable package restore -->
    <add key="enabled" value="True" />
    <!-- Automatically check for missing packages during build -->
    <add key="automatic" value="True" />
  </packageRestore>
</configuration>