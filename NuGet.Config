<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <config>
    <!-- Store packages on D: drive to avoid WSL/Windows path issues -->
    <add key="globalPackagesFolder" value="/mnt/d/.nuget/packages" />
  </config>
  <packageSources>
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>
</configuration>
