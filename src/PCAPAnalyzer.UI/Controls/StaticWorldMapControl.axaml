<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PCAPAnalyzer.UI.Controls.StaticWorldMapControl">
    
    <Border Background="#0D1117" 
            CornerRadius="8" 
            BorderBrush="#30363D" 
            BorderThickness="1">
        
        <!-- Fixed 3:1 aspect ratio container -->
        <Viewbox Stretch="Uniform" StretchDirection="Both">
            <Canvas Width="1200" Height="400" Background="#0D1117">
                
                <!-- Grid overlay for reference -->
                <Canvas.Styles>
                    <Style Selector="Path.continent">
                        <Setter Property="Fill" Value="#1C2128"/>
                        <Setter Property="Stroke" Value="#30363D"/>
                        <Setter Property="StrokeThickness" Value="1"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Style>
                    <Style Selector="Path.continent:pointerover">
                        <Setter Property="Fill">
                            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                <GradientStop Color="#2EA043" Offset="0"/>
                                <GradientStop Color="#238636" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter>
                    </Style>
                    <Style Selector="TextBlock.continent-label">
                        <Setter Property="Foreground" Value="#8B949E"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="IsHitTestVisible" Value="False"/>
                    </Style>
                </Canvas.Styles>
                
                <!-- North America - Left side, properly proportioned -->
                <Path Name="NorthAmerica" 
                      Classes="continent"
                      Data="M 120,120 
                            L 180,100 
                            L 240,95 
                            L 280,100 
                            L 320,110 
                            L 340,130 
                            L 350,150 
                            L 340,170 
                            L 320,180 
                            L 300,190 
                            L 280,200 
                            L 260,210 
                            L 240,215 
                            L 220,210 
                            L 200,200 
                            L 180,190 
                            L 160,180 
                            L 140,160 
                            L 120,140 
                            Z"/>
                <TextBlock Text="North America" 
                           Canvas.Left="210" 
                           Canvas.Top="145" 
                           Classes="continent-label"/>
                
                <!-- South America - Below North America -->
                <Path Name="SouthAmerica" 
                      Classes="continent"
                      Data="M 260,230 
                            L 280,225 
                            L 300,230 
                            L 310,250 
                            L 315,270 
                            L 310,290 
                            L 300,310 
                            L 285,330 
                            L 270,345 
                            L 255,350 
                            L 245,340 
                            L 240,320 
                            L 235,300 
                            L 240,280 
                            L 245,260 
                            L 250,240 
                            Z"/>
                <TextBlock Text="South America" 
                           Canvas.Left="245" 
                           Canvas.Top="285" 
                           Classes="continent-label"/>
                
                <!-- Europe - Center-left, smaller -->
                <Path Name="Europe" 
                      Classes="continent"
                      Data="M 480,100 
                            L 520,95 
                            L 560,100 
                            L 580,110 
                            L 590,125 
                            L 585,140 
                            L 570,150 
                            L 550,155 
                            L 530,150 
                            L 510,145 
                            L 490,135 
                            L 480,120 
                            Z"/>
                <TextBlock Text="Europe" 
                           Canvas.Left="515" 
                           Canvas.Top="120" 
                           Classes="continent-label"/>
                
                <!-- Africa - Center, larger and properly shaped -->
                <Path Name="Africa" 
                      Classes="continent"
                      Data="M 520,170 
                            L 540,165 
                            L 560,170 
                            L 580,180 
                            L 590,200 
                            L 595,220 
                            L 590,240 
                            L 585,260 
                            L 575,280 
                            L 560,300 
                            L 545,315 
                            L 530,320 
                            L 515,315 
                            L 500,300 
                            L 490,280 
                            L 485,260 
                            L 490,240 
                            L 495,220 
                            L 505,200 
                            L 515,180 
                            Z"/>
                <TextBlock Text="Africa" 
                           Canvas.Left="525" 
                           Canvas.Top="240" 
                           Classes="continent-label"/>
                
                <!-- Asia - Right side, largest continent -->
                <Path Name="Asia" 
                      Classes="continent"
                      Data="M 620,90 
                            L 680,85 
                            L 740,90 
                            L 800,95 
                            L 860,100 
                            L 920,110 
                            L 980,120 
                            L 1020,130 
                            L 1040,145 
                            L 1050,165 
                            L 1040,185 
                            L 1020,200 
                            L 980,210 
                            L 940,215 
                            L 900,210 
                            L 860,205 
                            L 820,200 
                            L 780,195 
                            L 740,190 
                            L 700,185 
                            L 660,175 
                            L 640,160 
                            L 620,140 
                            L 615,120 
                            L 620,100 
                            Z"/>
                <TextBlock Text="Asia" 
                           Canvas.Left="820" 
                           Canvas.Top="145" 
                           Classes="continent-label"/>
                
                <!-- Oceania/Australia - Bottom right -->
                <Path Name="Oceania" 
                      Classes="continent"
                      Data="M 880,280 
                            L 920,275 
                            L 960,280 
                            L 990,290 
                            L 1000,305 
                            L 995,320 
                            L 980,330 
                            L 960,335 
                            L 940,330 
                            L 920,320 
                            L 900,305 
                            L 885,290 
                            Z"/>
                <TextBlock Text="Oceania" 
                           Canvas.Left="925" 
                           Canvas.Top="300" 
                           Classes="continent-label"/>
                
                <!-- Decorative connection lines between continents -->
                <Path Stroke="#1C2128" 
                      StrokeThickness="1" 
                      StrokeDashArray="2,4"
                      Data="M 340,150 L 480,120"/>
                <Path Stroke="#1C2128" 
                      StrokeThickness="1" 
                      StrokeDashArray="2,4"
                      Data="M 590,140 L 620,130"/>
                <Path Stroke="#1C2128" 
                      StrokeThickness="1" 
                      StrokeDashArray="2,4"
                      Data="M 1000,210 L 960,280"/>
                
                <!-- Title -->
                <TextBlock Text="ðŸŒ Select a Continent" 
                           Canvas.Left="20" 
                           Canvas.Top="20" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#F0F6FC"/>
                
                <!-- Legend -->
                <Border Canvas.Right="20" 
                        Canvas.Top="20" 
                        Background="#161B22" 
                        CornerRadius="6" 
                        Padding="12">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Click to explore:" 
                                   FontSize="11" 
                                   Foreground="#8B949E"/>
                        <StackPanel Spacing="4">
                            <TextBlock Text="â€¢ Continental traffic" 
                                       FontSize="10" 
                                       Foreground="#7D8590"/>
                            <TextBlock Text="â€¢ Regional statistics" 
                                       FontSize="10" 
                                       Foreground="#7D8590"/>
                            <TextBlock Text="â€¢ Country details" 
                                       FontSize="10" 
                                       Foreground="#7D8590"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Canvas>
        </Viewbox>
    </Border>
</UserControl>