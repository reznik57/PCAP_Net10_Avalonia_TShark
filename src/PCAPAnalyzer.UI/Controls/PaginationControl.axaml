<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="50"
             x:Class="PCAPAnalyzer.UI.Controls.PaginationControl">

    <!-- ═══════════════════════════════════════════════════════════════
         UNIFIED PAGINATION CONTROL
         Reusable component for consistent pagination across all tabs
         ═══════════════════════════════════════════════════════════════ -->

    <Border Background="#161B22"
            BorderBrush="#30363D"
            BorderThickness="0,1,0,0"
            Padding="16,10">
        <Grid ColumnDefinitions="Auto,*,Auto">

            <!-- Page Size Selector -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Page Size:"
                          FontSize="12"
                          Foreground="#8B949E"
                          VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding PageSizeOptions}"
                         SelectedItem="{Binding PageSize}"
                         Width="80"
                         FontSize="12"/>
            </StackPanel>

            <!-- Page Info (center) -->
            <TextBlock Grid.Column="1"
                      Text="{Binding PageInfo}"
                      Classes="pagination-info"
                      HorizontalAlignment="Center"/>

            <!-- Navigation Buttons -->
            <StackPanel Grid.Column="2"
                       Orientation="Horizontal"
                       Spacing="6"
                       VerticalAlignment="Center">

                <Button Command="{Binding GoToFirstPageCommand}"
                       IsEnabled="{Binding CanGoToFirstPage}"
                       Classes="pagination-btn"
                       ToolTip.Tip="First Page">
                    <TextBlock Text="⏮" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>

                <Button Command="{Binding GoToPreviousPageCommand}"
                       IsEnabled="{Binding CanGoToPreviousPage}"
                       Classes="pagination-btn"
                       ToolTip.Tip="Previous Page">
                    <TextBlock Text="◀" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>

                <Button Command="{Binding GoToNextPageCommand}"
                       IsEnabled="{Binding CanGoToNextPage}"
                       Classes="pagination-btn"
                       ToolTip.Tip="Next Page">
                    <TextBlock Text="▶" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>

                <Button Command="{Binding GoToLastPageCommand}"
                       IsEnabled="{Binding CanGoToLastPage}"
                       Classes="pagination-btn"
                       ToolTip.Tip="Last Page">
                    <TextBlock Text="⏭" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
