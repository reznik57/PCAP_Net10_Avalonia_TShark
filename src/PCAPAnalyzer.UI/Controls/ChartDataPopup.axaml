<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:PCAPAnalyzer.UI.Models"
             xmlns:converters="using:PCAPAnalyzer.UI.Converters"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
             x:Class="PCAPAnalyzer.UI.Controls.ChartDataPopup"
             x:DataType="models:ChartPopupViewModel">
    
    <UserControl.Resources>
        <converters:StringEqualsConverter x:Key="StringEqualsConverter"/>
    </UserControl.Resources>
    
    <UserControl.Styles>
        <Style Selector="Border.popup-container">
            <Setter Property="Background" Value="#1C2128"/>
            <Setter Property="BorderBrush" Value="#30363D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BoxShadow" Value="0 8 32 0 #00000080"/>
        </Style>
        
        <Style Selector="RadioButton.data-type-selector">
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#8B949E"/>
        </Style>
        
        <Style Selector="RadioButton.data-type-selector:checked">
            <Setter Property="Background" Value="#1F6FEB20"/>
            <Setter Property="Foreground" Value="#58A6FF"/>
        </Style>
        
        <Style Selector="Border.data-item">
            <Setter Property="Background" Value="#161B2220"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
    </UserControl.Styles>
    
    <Border Classes="popup-container" Width="400" MaxHeight="500">
        <Grid RowDefinitions="Auto,Auto,Auto,*">
            
            <!-- Header -->
            <Border Grid.Row="0" Background="#161B22" CornerRadius="8,8,0,0" Padding="16,12">
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Chart Data Details" FontSize="14" FontWeight="Bold" Foreground="#F0F6FC"/>
                        <TextBlock Text="{Binding TimeWindowDisplay}" FontSize="11" Foreground="#8B949E" Margin="0,2,0,0"/>
                    </StackPanel>
                    <Button Grid.Column="1" 
                            Background="Transparent" 
                            BorderThickness="0"
                            Cursor="Hand"
                            Command="{Binding CloseCommand}">
                        <TextBlock Text="âœ•" FontSize="16" Foreground="#8B949E"/>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Summary Stats -->
            <Border Grid.Row="1" Background="#0D111720" Padding="16,8" BorderBrush="#30363D" BorderThickness="0,1,0,1">
                <Grid ColumnDefinitions="*,*">
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Traffic Volume" FontSize="11" Foreground="#8B949E"/>
                        <TextBlock Text="{Binding TrafficSummary}" FontSize="12" FontWeight="SemiBold" Foreground="#F0F6FC"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Rate" FontSize="11" Foreground="#8B949E"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding PointData.PacketsPerSecond, StringFormat='{}{0:F0} pkt/s'}" 
                                     FontSize="12" FontWeight="SemiBold" Foreground="#F0F6FC"/>
                            <TextBlock Text=" / " FontSize="11" Foreground="#484F58" Margin="4,0"/>
                            <TextBlock Text="{Binding PointData.BytesPerSecond, StringFormat='{}{0:F2} KB/s'}" 
                                     FontSize="12" FontWeight="SemiBold" Foreground="#F0F6FC"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Data Type Selector -->
            <Border Grid.Row="2" Padding="16,12,16,8">
                <StackPanel>
                    <TextBlock Text="Select Data Type:" FontSize="11" Foreground="#8B949E" Margin="0,0,0,8"/>
                    <ItemsControl ItemsSource="{Binding DataTypes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <RadioButton Content="{Binding}" 
                                           GroupName="DataType"
                                           Classes="data-type-selector"
                                           IsChecked="{Binding $parent[ItemsControl].DataContext.SelectedDataType, 
                                                      Mode=TwoWay, 
                                                      Converter={x:Static ObjectConverters.Equal},
                                                      ConverterParameter={Binding}}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
            
            <!-- Data Display -->
            <ScrollViewer Grid.Row="3" 
                         Padding="16,0,16,16" 
                         HorizontalScrollBarVisibility="Disabled"
                         VerticalScrollBarVisibility="Auto">
                <ContentControl Content="{Binding}">
                    <ContentControl.DataTemplates>
                        
                        <!-- Template for when Ports is selected -->
                        <DataTemplate DataType="models:ChartPopupViewModel">
                            <ItemsControl ItemsSource="{Binding DisplayItems}" 
                                        IsVisible="{Binding SelectedDataType, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Ports}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="models:PortActivityData">
                                        <Border Classes="data-item">
                                            <Grid ColumnDefinitions="Auto,*,Auto">
                                                <StackPanel Grid.Column="0">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Port}" 
                                                                 FontSize="13" 
                                                                 FontWeight="SemiBold" 
                                                                 Foreground="#F0F6FC"/>
                                                        <TextBlock Text="/" 
                                                                 FontSize="11" 
                                                                 Foreground="#484F58" 
                                                                 Margin="2,0"/>
                                                        <TextBlock Text="{Binding Protocol}" 
                                                                 FontSize="11" 
                                                                 Foreground="#8B949E"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding ServiceName}" 
                                                             FontSize="10" 
                                                             Foreground="#484F58"/>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                                    <TextBlock Text="{Binding DisplayBytes}" 
                                                             FontSize="12" 
                                                             Foreground="#F0F6FC" 
                                                             HorizontalAlignment="Right"/>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                        <TextBlock Text="{Binding PacketCount, StringFormat='{}{0:N0} pkts'}" 
                                                                 FontSize="10" 
                                                                 Foreground="#8B949E"/>
                                                        <TextBlock Text="{Binding Percentage, StringFormat=' ({0:F1}%)'}" 
                                                                 FontSize="10" 
                                                                 Foreground="#484F58"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                        
                        <!-- Template for when Source IPs is selected -->
                        <DataTemplate DataType="models:ChartPopupViewModel">
                            <ItemsControl ItemsSource="{Binding DisplayItems}" 
                                        IsVisible="{Binding SelectedDataType, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Source IPs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="models:IPAddressData">
                                        <Border Classes="data-item">
                                            <Grid ColumnDefinitions="Auto,*,Auto">
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Address}" 
                                                             FontSize="13" 
                                                             FontWeight="SemiBold" 
                                                             Foreground="#F0F6FC"/>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Country}" 
                                                                 FontSize="10" 
                                                                 Foreground="#8B949E"/>
                                                        <TextBlock Text="{Binding City, StringFormat=' - {0}'}" 
                                                                 FontSize="10" 
                                                                 Foreground="#484F58"
                                                                 IsVisible="{Binding City, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                                    <TextBlock Text="{Binding DisplayBytes}" 
                                                             FontSize="12" 
                                                             Foreground="#F0F6FC" 
                                                             HorizontalAlignment="Right"/>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                        <TextBlock Text="{Binding PacketCount, StringFormat='{}{0:N0} pkts'}" 
                                                                 FontSize="10" 
                                                                 Foreground="#8B949E"/>
                                                        <TextBlock Text="{Binding Percentage, StringFormat=' ({0:F1}%)'}" 
                                                                 FontSize="10" 
                                                                 Foreground="#484F58"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                        
                        <!-- Template for when Destination IPs is selected -->
                        <DataTemplate DataType="models:ChartPopupViewModel">
                            <ItemsControl ItemsSource="{Binding DisplayItems}" 
                                        IsVisible="{Binding SelectedDataType, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Destination IPs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="models:IPAddressData">
                                        <Border Classes="data-item">
                                            <Grid ColumnDefinitions="Auto,*,Auto">
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Address}" 
                                                             FontSize="13" 
                                                             FontWeight="SemiBold" 
                                                             Foreground="#F0F6FC"/>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Country}" 
                                                                 FontSize="10" 
                                                                 Foreground="#8B949E"/>
                                                        <TextBlock Text="{Binding City, StringFormat=' - {0}'}" 
                                                                 FontSize="10" 
                                                                 Foreground="#484F58"
                                                                 IsVisible="{Binding City, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                                    <TextBlock Text="{Binding DisplayBytes}" 
                                                             FontSize="12" 
                                                             Foreground="#F0F6FC" 
                                                             HorizontalAlignment="Right"/>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                        <TextBlock Text="{Binding PacketCount, StringFormat='{}{0:N0} pkts'}" 
                                                                 FontSize="10" 
                                                                 Foreground="#8B949E"/>
                                                        <TextBlock Text="{Binding Percentage, StringFormat=' ({0:F1}%)'}" 
                                                                 FontSize="10" 
                                                                 Foreground="#484F58"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                        
                    </ContentControl.DataTemplates>
                </ContentControl>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>