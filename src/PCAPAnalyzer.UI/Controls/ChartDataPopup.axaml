<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:PCAPAnalyzer.UI.Models"
             xmlns:converters="using:PCAPAnalyzer.UI.Converters"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
             x:Class="PCAPAnalyzer.UI.Controls.ChartDataPopup"
             x:DataType="models:ChartPopupViewModel">

    <UserControl.Resources>
        <converters:StringEqualsConverter x:Key="StringEqualsConverter"/>
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="Border.popup-container">
            <Setter Property="Background" Value="{DynamicResource PopupBgSecondary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PopupBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BoxShadow" Value="0 8 32 0 #00000080"/>
        </Style>

        <Style Selector="RadioButton.data-type-selector">
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource PopupTextSecondary}"/>
        </Style>

        <Style Selector="RadioButton.data-type-selector:checked">
            <Setter Property="Background" Value="{DynamicResource ColorPrimaryTintLight}"/>
            <Setter Property="Foreground" Value="{DynamicResource PopupLink}"/>
        </Style>

        <Style Selector="Border.data-item">
            <Setter Property="Background" Value="{DynamicResource PopupBgSecondary}"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>
    </UserControl.Styles>
    
    <Border Classes="popup-container" Width="400" MaxHeight="500">
        <Grid RowDefinitions="Auto,Auto,Auto,*">
            
            <!-- Header -->
            <Border Grid.Row="0" Background="{DynamicResource PopupBgSecondary}" CornerRadius="8,8,0,0" Padding="16,12">
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Chart Data Details" FontSize="{DynamicResource FontSizeInput}" FontWeight="Bold" Foreground="{DynamicResource PopupText}"/>
                        <TextBlock Text="{Binding TimeWindowDisplay}" FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource PopupTextSecondary}" Margin="0,2,0,0"/>
                    </StackPanel>
                    <Button Grid.Column="1"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Command="{Binding CloseCommand}">
                        <TextBlock Text="âœ•" FontSize="{DynamicResource FontSizeLarge}" Foreground="{DynamicResource PopupTextSecondary}"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Summary Stats -->
            <Border Grid.Row="1" Background="{DynamicResource PopupBg}" Padding="16,8" BorderBrush="{DynamicResource PopupBorder}" BorderThickness="0,1,0,1">
                <Grid ColumnDefinitions="*,*">
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Traffic Volume" FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource PopupTextSecondary}"/>
                        <TextBlock Text="{Binding TrafficSummary}" FontSize="{DynamicResource FontSizeBase}" FontWeight="SemiBold" Foreground="{DynamicResource PopupText}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Rate" FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource PopupTextSecondary}"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding PointData.PacketsPerSecond, StringFormat='{}{0:F0} pkt/s'}"
                                     FontSize="{DynamicResource FontSizeBase}" FontWeight="SemiBold" Foreground="{DynamicResource PopupText}"/>
                            <TextBlock Text=" / " FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource TextMuted}" Margin="4,0"/>
                            <TextBlock Text="{Binding PointData.BytesPerSecond, StringFormat='{}{0:F2} KB/s'}"
                                     FontSize="{DynamicResource FontSizeBase}" FontWeight="SemiBold" Foreground="{DynamicResource PopupText}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Data Type Selector -->
            <Border Grid.Row="2" Padding="16,12,16,8">
                <StackPanel>
                    <TextBlock Text="Select Data Type:" FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource PopupTextSecondary}" Margin="0,0,0,8"/>
                    <ItemsControl ItemsSource="{Binding DataTypes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <RadioButton Content="{Binding}" 
                                           GroupName="DataType"
                                           Classes="data-type-selector"
                                           IsChecked="{Binding $parent[ItemsControl].DataContext.SelectedDataType, 
                                                      Mode=TwoWay, 
                                                      Converter={x:Static ObjectConverters.Equal},
                                                      ConverterParameter={Binding}}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
            
            <!-- Data Display -->
            <ScrollViewer Grid.Row="3" 
                         Padding="16,0,16,16" 
                         HorizontalScrollBarVisibility="Disabled"
                         VerticalScrollBarVisibility="Auto">
                <ContentControl Content="{Binding}">
                    <ContentControl.DataTemplates>
                        
                        <!-- Template for when Ports is selected -->
                        <DataTemplate DataType="models:ChartPopupViewModel">
                            <ItemsControl ItemsSource="{Binding DisplayItems}"
                                        IsVisible="{Binding SelectedDataType, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Ports}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="models:PortActivityData">
                                        <Border Classes="data-item">
                                            <StackPanel Spacing="6">
                                                <!-- Row 1: Port info, percentage bar, percentage value -->
                                                <Grid ColumnDefinitions="120,*,60">
                                                    <StackPanel Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding Port}"
                                                                     FontSize="{DynamicResource FontSizeMedium}"
                                                                     FontWeight="SemiBold"
                                                                     Foreground="{DynamicResource PopupText}"/>
                                                            <TextBlock Text="/"
                                                                     FontSize="{DynamicResource FontSizeSmall}"
                                                                     Foreground="{DynamicResource TextMuted}"
                                                                     Margin="2,0"/>
                                                            <TextBlock Text="{Binding Protocol}"
                                                                     FontSize="{DynamicResource FontSizeSmall}"
                                                                     Foreground="{DynamicResource PopupTextSecondary}"/>
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding ServiceName}"
                                                                 FontSize="{DynamicResource FontSizeXS}"
                                                                 Foreground="{DynamicResource TextMuted}"/>
                                                    </StackPanel>

                                                    <!-- Percentage bar -->
                                                    <Border Grid.Column="1" Height="8" Background="{DynamicResource PopupBgTertiary}" CornerRadius="4" Margin="8,0">
                                                        <Border Background="{DynamicResource PopupLink}" CornerRadius="4" HorizontalAlignment="Left"
                                                                Width="{Binding Percentage}"/>
                                                    </Border>

                                                    <!-- Percentage value -->
                                                    <TextBlock Grid.Column="2"
                                                             Text="{Binding Percentage, StringFormat='{}{0:F1}%'}"
                                                             FontSize="{DynamicResource FontSizeSmall}"
                                                             Foreground="{DynamicResource PopupTextSecondary}"
                                                             HorizontalAlignment="Right"/>
                                                </Grid>

                                                <!-- Row 2: Packet count and size -->
                                                <Grid ColumnDefinitions="*,Auto">
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                                                        <TextBlock Text="{Binding PacketCount, StringFormat='{}{0:N0} pkts'}"
                                                                 FontSize="{DynamicResource FontSizeXS}"
                                                                 Foreground="{DynamicResource PopupTextSecondary}"/>
                                                        <TextBlock Text="{Binding DisplayBytes}"
                                                                 FontSize="{DynamicResource FontSizeXS}"
                                                                 Foreground="{DynamicResource PopupTextSecondary}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                        
                        <!-- Template for when Source IPs is selected -->
                        <DataTemplate DataType="models:ChartPopupViewModel">
                            <ItemsControl ItemsSource="{Binding DisplayItems}"
                                        IsVisible="{Binding SelectedDataType, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Source IPs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="models:IPAddressData">
                                        <Border Classes="data-item">
                                            <StackPanel Spacing="6">
                                                <!-- Row 1: IP address, percentage bar, percentage value -->
                                                <Grid ColumnDefinitions="160,*,60">
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding Address}"
                                                                 FontSize="{DynamicResource FontSizeMedium}"
                                                                 FontWeight="SemiBold"
                                                                 Foreground="{DynamicResource PopupText}"/>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding Country}"
                                                                     FontSize="{DynamicResource FontSizeXS}"
                                                                     Foreground="{DynamicResource PopupTextSecondary}"/>
                                                            <TextBlock Text="{Binding City, StringFormat=' - {0}'}"
                                                                     FontSize="{DynamicResource FontSizeXS}"
                                                                     Foreground="{DynamicResource TextMuted}"
                                                                     IsVisible="{Binding City, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <!-- Percentage bar -->
                                                    <Border Grid.Column="1" Height="8" Background="{DynamicResource PopupBgTertiary}" CornerRadius="4" Margin="8,0">
                                                        <Border Background="{DynamicResource PopupSuccess}" CornerRadius="4" HorizontalAlignment="Left"
                                                                Width="{Binding Percentage}"/>
                                                    </Border>

                                                    <!-- Percentage value -->
                                                    <TextBlock Grid.Column="2"
                                                             Text="{Binding Percentage, StringFormat='{}{0:F1}%'}"
                                                             FontSize="{DynamicResource FontSizeSmall}"
                                                             Foreground="{DynamicResource PopupTextSecondary}"
                                                             HorizontalAlignment="Right"/>
                                                </Grid>

                                                <!-- Row 2: Packet count and size -->
                                                <Grid ColumnDefinitions="*,Auto">
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                                                        <TextBlock Text="{Binding PacketCount, StringFormat='{}{0:N0} pkts'}"
                                                                 FontSize="{DynamicResource FontSizeXS}"
                                                                 Foreground="{DynamicResource PopupTextSecondary}"/>
                                                        <TextBlock Text="{Binding DisplayBytes}"
                                                                 FontSize="{DynamicResource FontSizeXS}"
                                                                 Foreground="{DynamicResource PopupTextSecondary}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                        
                        <!-- Template for when Destination IPs is selected -->
                        <DataTemplate DataType="models:ChartPopupViewModel">
                            <ItemsControl ItemsSource="{Binding DisplayItems}"
                                        IsVisible="{Binding SelectedDataType, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Destination IPs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="models:IPAddressData">
                                        <Border Classes="data-item">
                                            <StackPanel Spacing="6">
                                                <!-- Row 1: IP address, percentage bar, percentage value -->
                                                <Grid ColumnDefinitions="160,*,60">
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding Address}"
                                                                 FontSize="{DynamicResource FontSizeMedium}"
                                                                 FontWeight="SemiBold"
                                                                 Foreground="{DynamicResource PopupText}"/>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding Country}"
                                                                     FontSize="{DynamicResource FontSizeXS}"
                                                                     Foreground="{DynamicResource PopupTextSecondary}"/>
                                                            <TextBlock Text="{Binding City, StringFormat=' - {0}'}"
                                                                     FontSize="{DynamicResource FontSizeXS}"
                                                                     Foreground="{DynamicResource TextMuted}"
                                                                     IsVisible="{Binding City, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <!-- Percentage bar -->
                                                    <Border Grid.Column="1" Height="8" Background="{DynamicResource PopupBgTertiary}" CornerRadius="4" Margin="8,0">
                                                        <Border Background="{DynamicResource PopupSuccess}" CornerRadius="4" HorizontalAlignment="Left"
                                                                Width="{Binding Percentage}"/>
                                                    </Border>

                                                    <!-- Percentage value -->
                                                    <TextBlock Grid.Column="2"
                                                             Text="{Binding Percentage, StringFormat='{}{0:F1}%'}"
                                                             FontSize="{DynamicResource FontSizeSmall}"
                                                             Foreground="{DynamicResource PopupTextSecondary}"
                                                             HorizontalAlignment="Right"/>
                                                </Grid>

                                                <!-- Row 2: Packet count and size -->
                                                <Grid ColumnDefinitions="*,Auto">
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                                                        <TextBlock Text="{Binding PacketCount, StringFormat='{}{0:N0} pkts'}"
                                                                 FontSize="{DynamicResource FontSizeXS}"
                                                                 Foreground="{DynamicResource PopupTextSecondary}"/>
                                                        <TextBlock Text="{Binding DisplayBytes}"
                                                                 FontSize="{DynamicResource FontSizeXS}"
                                                                 Foreground="{DynamicResource PopupTextSecondary}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                        
                    </ContentControl.DataTemplates>
                </ContentControl>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>