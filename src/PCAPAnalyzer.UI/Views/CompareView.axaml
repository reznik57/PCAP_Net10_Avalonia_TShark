<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PCAPAnalyzer.UI.ViewModels"
             xmlns:ctrl="using:PCAPAnalyzer.UI.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="900"
             x:Class="PCAPAnalyzer.UI.Views.CompareView"
             x:DataType="vm:CompareViewModel"
             Background="{DynamicResource BackgroundDark}">

    <!-- Styles centralized in UnifiedDarkTheme.axaml -->
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*">
        <!-- Row 0: Header with File Selection -->
        <Border Grid.Row="0" Background="{DynamicResource BackgroundPanel}" BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="0,0,0,1" Padding="24,16">
            <Grid ColumnDefinitions="*,Auto">
                <!-- Title and File Selection -->
                <StackPanel Grid.Column="0" Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="&#x1F50D;" FontSize="{StaticResource FontSizeHeading}"/>
                        <StackPanel>
                            <TextBlock Text="PCAP File Comparison" FontSize="{StaticResource FontSizeXL}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBlock Text="{Binding StatusMessage}" FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- File Selection Row -->
                    <Grid ColumnDefinitions="*,24,*,24,Auto">
                        <!-- File A -->
                        <Border Grid.Column="0" Background="{DynamicResource BackgroundDark}" BorderBrush="{DynamicResource SlackDanger}" BorderThickness="2" CornerRadius="6" Padding="12">
                            <Grid ColumnDefinitions="Auto,*">
                                <Border Grid.Column="0" Background="{DynamicResource SlackDanger}" CornerRadius="4" Padding="8,4" Margin="0,0,12,0">
                                    <TextBlock Text="A" FontSize="{StaticResource FontSizeBase}" FontWeight="Bold" Foreground="White"/>
                                </Border>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="File A (Current)" FontSize="{StaticResource FontSizeXS}" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <TextBlock Text="{Binding FileAName}" FontSize="{StaticResource FontSizeMedium}" Foreground="{DynamicResource TextPrimaryBrush}" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- VS Separator -->
                        <TextBlock Grid.Column="1" Text="vs" FontSize="{StaticResource FontSizeInput}" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        <!-- File B -->
                        <Border Grid.Column="2" Background="{DynamicResource BackgroundDark}" BorderBrush="{DynamicResource SlackSuccess}" BorderThickness="2" CornerRadius="6" Padding="12">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <Border Grid.Column="0" Background="{DynamicResource SlackSuccess}" CornerRadius="4" Padding="8,4" Margin="0,0,12,0">
                                    <TextBlock Text="B" FontSize="{StaticResource FontSizeBase}" FontWeight="Bold" Foreground="White"/>
                                </Border>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="File B (Compare)" FontSize="{StaticResource FontSizeXS}" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <TextBlock Text="{Binding FileBName}" FontSize="{StaticResource FontSizeMedium}" Foreground="{DynamicResource TextPrimaryBrush}" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                                <Button Grid.Column="2" Command="{Binding BrowseFileBCommand}"
                                        Background="{DynamicResource BackgroundElevated}" BorderBrush="{DynamicResource BorderStrongBrush}" Padding="8,4" CornerRadius="4" Margin="8,0,0,0">
                                    <TextBlock Text="Browse..." FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Compare Button -->
                        <StackPanel Grid.Column="4" Orientation="Horizontal" Spacing="8">
                            <Button Command="{Binding CompareCommand}"
                                    Background="{DynamicResource AccentPrimary}" BorderBrush="{StaticResource ColorPrimaryHover}" Padding="16,10" CornerRadius="6"
                                    IsVisible="{Binding !IsComparing}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="&#x2699;" FontSize="{StaticResource FontSizeInput}"/>
                                    <TextBlock Text="Compare" FontSize="{StaticResource FontSizeMedium}" FontWeight="SemiBold" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding CancelComparisonCommand}"
                                    Background="{DynamicResource SlackDanger}" BorderBrush="{StaticResource ColorDangerHover}" Padding="16,10" CornerRadius="6"
                                    IsVisible="{Binding IsComparing}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="&#x2716;" FontSize="{StaticResource FontSizeInput}"/>
                                    <TextBlock Text="Cancel" FontSize="{StaticResource FontSizeMedium}" FontWeight="SemiBold" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding ClearResultsCommand}"
                                    Background="{DynamicResource BackgroundElevated}" BorderBrush="{DynamicResource BorderStrongBrush}" Padding="12,10" CornerRadius="6"
                                    IsVisible="{Binding HasResults}">
                                <TextBlock Text="Clear" FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Row 1: Progress Bar (visible during comparison) -->
        <Border Grid.Row="1" Background="{DynamicResource BackgroundPanel}" Padding="24,8" IsVisible="{Binding IsComparing}">
            <ProgressBar Value="{Binding ComparisonProgress}" Minimum="0" Maximum="100" Height="6"
                         Background="{DynamicResource BackgroundElevated}" Foreground="{DynamicResource AccentPrimary}"/>
        </Border>

        <!-- Row 2: UnifiedFilterPanelControl (Dashboard pattern) -->
        <Border Grid.Row="2" Padding="24,10,24,0">
            <ctrl:UnifiedFilterPanelControl Margin="0,0,0,10" />
        </Border>

        <!-- Row 3: Statistics Panel -->
        <Border Grid.Row="3" Background="{DynamicResource BackgroundDark}" BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="0,0,0,1" Padding="24,16"
                IsVisible="{Binding HasResults}">
            <Grid ColumnDefinitions="*,*,*,*,*,*">
                <!-- File A Stats -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="File A" FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource SlackDanger}" FontWeight="Bold"/>
                    <TextBlock Text="{Binding TotalFileA, StringFormat='{}{0:N0}'}" FontSize="{StaticResource FontSizeHeading}" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBlock Text="packets" FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>

                <!-- File B Stats -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="File B" FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource SlackSuccess}" FontWeight="Bold"/>
                    <TextBlock Text="{Binding TotalFileB, StringFormat='{}{0:N0}'}" FontSize="{StaticResource FontSizeHeading}" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBlock Text="packets" FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>

                <!-- Common -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Common" FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource TextSecondaryBrush}" FontWeight="Bold"/>
                    <TextBlock Text="{Binding CommonCount, StringFormat='{}{0:N0}'}" FontSize="{StaticResource FontSizeHeading}" FontWeight="Bold" Foreground="{DynamicResource AccentPrimary}"/>
                    <TextBlock Text="matches" FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>

                <!-- Unique to A -->
                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="Unique to A" FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource SlackDanger}" FontWeight="Bold"/>
                    <TextBlock Text="{Binding UniqueToA, StringFormat='{}{0:N0}'}" FontSize="{StaticResource FontSizeHeading}" FontWeight="Bold" Foreground="{DynamicResource SlackDanger}"/>
                    <TextBlock Text="packets" FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>

                <!-- Unique to B -->
                <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                    <TextBlock Text="Unique to B" FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource SlackSuccess}" FontWeight="Bold"/>
                    <TextBlock Text="{Binding UniqueToB, StringFormat='{}{0:N0}'}" FontSize="{StaticResource FontSizeHeading}" FontWeight="Bold" Foreground="{DynamicResource SlackSuccess}"/>
                    <TextBlock Text="packets" FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>

                <!-- Match Percentage -->
                <StackPanel Grid.Column="5" HorizontalAlignment="Center">
                    <TextBlock Text="Match Rate" FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource TextSecondaryBrush}" FontWeight="Bold"/>
                    <TextBlock Text="{Binding MatchPercentage}" FontSize="{StaticResource FontSizeHeading}" FontWeight="Bold" Foreground="{DynamicResource AccentSecondary}"/>
                    <TextBlock Text="similarity" FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Row 4: Main Content (Filter Bar + Table) -->
        <Grid Grid.Row="4" RowDefinitions="Auto,*" IsVisible="{Binding HasResults}">
            <!-- Filter Bar -->
            <Border Grid.Row="0" Background="{DynamicResource BackgroundPanel}" BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="0,0,0,1" Padding="24,12">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <!-- Filter Buttons -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Filter:" FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>

                        <RadioButton GroupName="SourceFilter" IsChecked="{Binding CurrentFilter, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static vm:PacketSourceFilter.All}}"
                                     Command="{Binding FilterAllCommand}">
                            <Border Background="{DynamicResource BackgroundElevated}" BorderBrush="{DynamicResource BorderStrongBrush}" BorderThickness="1" CornerRadius="4" Padding="12,6">
                                <TextBlock Text="All" FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </Border>
                        </RadioButton>

                        <RadioButton GroupName="SourceFilter" IsChecked="{Binding CurrentFilter, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static vm:PacketSourceFilter.FileAOnly}}"
                                     Command="{Binding FilterFileAOnlyCommand}">
                            <Border Background="{StaticResource DangerTint}" BorderBrush="{DynamicResource SlackDanger}" BorderThickness="1" CornerRadius="4" Padding="12,6">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <Border Background="{DynamicResource SlackDanger}" CornerRadius="2" Padding="4,1">
                                        <TextBlock Text="A" FontSize="{StaticResource FontSizeXS}" FontWeight="Bold" Foreground="White"/>
                                    </Border>
                                    <TextBlock Text="Only File A" FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource SlackDanger}"/>
                                </StackPanel>
                            </Border>
                        </RadioButton>

                        <RadioButton GroupName="SourceFilter" IsChecked="{Binding CurrentFilter, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static vm:PacketSourceFilter.FileBOnly}}"
                                     Command="{Binding FilterFileBOnlyCommand}">
                            <Border Background="{StaticResource SuccessTint}" BorderBrush="{DynamicResource SlackSuccess}" BorderThickness="1" CornerRadius="4" Padding="12,6">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <Border Background="{DynamicResource SlackSuccess}" CornerRadius="2" Padding="4,1">
                                        <TextBlock Text="B" FontSize="{StaticResource FontSizeXS}" FontWeight="Bold" Foreground="White"/>
                                    </Border>
                                    <TextBlock Text="Only File B" FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource SlackSuccess}"/>
                                </StackPanel>
                            </Border>
                        </RadioButton>

                        <RadioButton GroupName="SourceFilter" IsChecked="{Binding CurrentFilter, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static vm:PacketSourceFilter.Common}}"
                                     Command="{Binding FilterCommonCommand}">
                            <Border Background="{DynamicResource BackgroundElevated}" BorderBrush="{DynamicResource AccentPrimary}" BorderThickness="1" CornerRadius="4" Padding="12,6">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <TextBlock Text="=" FontSize="{StaticResource FontSizeBase}" FontWeight="Bold" Foreground="{DynamicResource AccentPrimary}"/>
                                    <TextBlock Text="Common" FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource AccentPrimary}"/>
                                </StackPanel>
                            </Border>
                        </RadioButton>
                    </StackPanel>

                    <!-- Search Box -->
                    <TextBox Grid.Column="2" Text="{Binding SearchText}" Watermark="Search packets..."
                             Background="{DynamicResource BackgroundDark}" BorderBrush="{DynamicResource BorderSubtleBrush}" Foreground="{DynamicResource TextPrimaryBrush}"
                             Width="250" Padding="12,8"/>
                </Grid>
            </Border>

            <!-- Packet Table -->
            <DataGrid Grid.Row="1" ItemsSource="{Binding DisplayedPackets}"
                      AutoGenerateColumns="False" IsReadOnly="True"
                      Background="{DynamicResource BackgroundDark}" Foreground="{DynamicResource TextPrimaryBrush}"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      RowBackground="{DynamicResource BackgroundDark}">
                <DataGrid.Columns>
                    <!-- Source Indicator -->
                    <DataGridTemplateColumn Header="" Width="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="vm:ComparedPacketViewModel">
                                <Border Background="{Binding SourceColor}" CornerRadius="4" Padding="8,4"
                                        HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding SourceIndicator}" FontSize="{StaticResource FontSizeSmall}" FontWeight="Bold" Foreground="White"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Frame" Binding="{Binding FrameNumber}" Width="70"/>
                    <DataGridTextColumn Header="Time" Binding="{Binding Timestamp}" Width="100"/>
                    <DataGridTextColumn Header="Source IP" Binding="{Binding SourceIP}" Width="140"/>
                    <DataGridTextColumn Header="Destination IP" Binding="{Binding DestinationIP}" Width="140"/>
                    <DataGridTextColumn Header="Protocol" Binding="{Binding Protocol}" Width="80"/>
                    <DataGridTextColumn Header="Length" Binding="{Binding Length}" Width="70"/>
                    <DataGridTextColumn Header="Source File" Binding="{Binding SourceFile}" Width="180"/>
                    <DataGridTextColumn Header="Info" Binding="{Binding Info}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Empty State (no results yet) -->
        <StackPanel Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16"
                    IsVisible="{Binding !HasResults}">
            <TextBlock Text="&#x1F50D;" FontSize="64" HorizontalAlignment="Center" Opacity="0.3"/>
            <TextBlock Text="Select two PCAP files to compare" FontSize="{StaticResource FontSizeLarge}" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
            <TextBlock Text="File A is automatically set from the current analysis." FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource TextMutedBrush}" HorizontalAlignment="Center"/>
            <TextBlock Text="Click 'Browse...' to select File B, then click 'Compare'." FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource TextMutedBrush}" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
