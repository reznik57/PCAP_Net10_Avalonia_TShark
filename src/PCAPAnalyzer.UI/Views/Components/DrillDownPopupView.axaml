<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PCAPAnalyzer.UI.ViewModels.Components"
             mc:Ignorable="d" d:DesignWidth="550" d:DesignHeight="600"
             x:Class="PCAPAnalyzer.UI.Views.Components.DrillDownPopupView"
             x:DataType="vm:DrillDownPopupViewModel"
             IsVisible="{Binding IsVisible}">

    <Border Background="{DynamicResource BackgroundDark}" BorderBrush="{DynamicResource BackgroundElevated}" BorderThickness="1"
            CornerRadius="8" Padding="16" MinWidth="500" MaxWidth="600">
        <StackPanel Spacing="12">
            <!-- Header -->
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0" Text="{Binding Title}" FontSize="{StaticResource FontSizeLarge}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                <Button Grid.Column="1" Command="{Binding CloseCommand}" Classes="close-btn" Content="âœ•"/>
            </Grid>

            <!-- Sampling Warning -->
            <Border Background="{DynamicResource AlertWarningBg}" CornerRadius="4" Padding="8" IsVisible="{Binding ShowSamplingWarning}">
                <TextBlock Text="Showing sample of 50,000 packets" FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource SlackWarning}"/>
            </Border>

            <!-- Traffic Summary -->
            <StackPanel Spacing="8">
                <TextBlock Text="TRAFFIC SUMMARY" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto">
                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="Packets:" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="{StaticResource FontSizeBase}"/>
                        <TextBlock Text="{Binding TotalPackets, StringFormat='{}{0:N0}'}" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="{StaticResource FontSizeBase}" FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="First:" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="{StaticResource FontSizeBase}"/>
                        <TextBlock Text="{Binding FirstSeen, StringFormat='{}{0:HH:mm:ss}'}" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="{StaticResource FontSizeBase}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="Traffic:" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="{StaticResource FontSizeBase}"/>
                        <TextBlock Text="{Binding TotalBytesFormatted}" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="{StaticResource FontSizeBase}" FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="Last:" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="{StaticResource FontSizeBase}"/>
                        <TextBlock Text="{Binding LastSeen, StringFormat='{}{0:HH:mm:ss}'}" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="{StaticResource FontSizeBase}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="Avg Size:" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="{StaticResource FontSizeBase}"/>
                        <TextBlock Text="{Binding AveragePacketSize, StringFormat='{}{0:N0} bytes'}" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="{StaticResource FontSizeBase}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="Duration:" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="{StaticResource FontSizeBase}"/>
                        <TextBlock Text="{Binding Duration}" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="{StaticResource FontSizeBase}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Top Ports (clickable) -->
            <StackPanel Spacing="8" IsVisible="{Binding TopPorts.Count}">
                <TextBlock Text="TOP PORTS" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                <ItemsControl ItemsSource="{Binding TopPorts}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:PortBreakdownItem">
                            <Button Command="{ReflectionBinding DataContext.FilterByPortCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding Port}"
                                    Classes="row-btn" ToolTip.Tip="Click to view packets for this port">
                                <Grid ColumnDefinitions="80,*,50,70,70">
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="{Binding Port}" FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource SlackInfo}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding ServiceName, StringFormat='({0})'}" FontSize="{StaticResource FontSizeXS}" Foreground="{DynamicResource TextSecondaryBrush}"
                                                   IsVisible="{Binding ServiceName, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                                    </StackPanel>
                                    <Border Grid.Column="1" Height="8" Background="{DynamicResource BackgroundPanel}" CornerRadius="4" Margin="8,0">
                                        <Border Background="{DynamicResource SlackInfo}" CornerRadius="4" HorizontalAlignment="Left"
                                                Width="{Binding Percentage}"/>
                                    </Border>
                                    <TextBlock Grid.Column="2" Text="{Binding Percentage, StringFormat='{}{0:F0}%'}" FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="3" Text="{Binding PacketCount, StringFormat='{}{0:N0} pkts'}" FontSize="{StaticResource FontSizeXS}" Foreground="{DynamicResource TextMutedBrush}" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="4" Text="{Binding BytesFormatted}" FontSize="{StaticResource FontSizeXS}" Foreground="{DynamicResource TextMutedBrush}" HorizontalAlignment="Right"/>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Connected Endpoints (clickable) -->
            <StackPanel Spacing="8" IsVisible="{Binding ConnectedEndpoints.Count}">
                <TextBlock Text="TOP TALKERS" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                <ItemsControl ItemsSource="{Binding ConnectedEndpoints}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:EndpointBreakdownItem">
                            <Button Command="{ReflectionBinding DataContext.FilterByIPCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding IP}"
                                    Classes="row-btn" ToolTip.Tip="Click to view packets for this IP">
                                <Grid ColumnDefinitions="120,*,50,70,70">
                                    <TextBlock Grid.Column="0" Text="{Binding IP}" FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource SlackSuccess}" TextTrimming="CharacterEllipsis"/>
                                    <Border Grid.Column="1" Height="8" Background="{DynamicResource BackgroundPanel}" CornerRadius="4" Margin="8,0">
                                        <Border Background="{DynamicResource SlackSuccess}" CornerRadius="4" HorizontalAlignment="Left"
                                                Width="{Binding Percentage}"/>
                                    </Border>
                                    <TextBlock Grid.Column="2" Text="{Binding Percentage, StringFormat='{}{0:F0}%'}" FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="3" Text="{Binding PacketCount, StringFormat='{}{0:N0} pkts'}" FontSize="{StaticResource FontSizeXS}" Foreground="{DynamicResource TextMutedBrush}" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="4" Text="{Binding BytesFormatted}" FontSize="{StaticResource FontSizeXS}" Foreground="{DynamicResource TextMutedBrush}" HorizontalAlignment="Right"/>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Top Streams (clickable) -->
            <StackPanel Spacing="8" IsVisible="{Binding TopConversations.Count}">
                <TextBlock Text="TOP STREAMS" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                <ItemsControl ItemsSource="{Binding TopConversations}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:ConversationBreakdownItem">
                            <Button Command="{ReflectionBinding DataContext.FilterByConversationCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Classes="row-btn" ToolTip.Tip="Click to view packets for this stream">
                                <Grid ColumnDefinitions="180,*,50,50,60">
                                    <TextBlock Grid.Column="0" Text="{Binding DisplayText}" FontSize="{StaticResource FontSizeXS}" Foreground="{DynamicResource SlackWarning}" TextTrimming="CharacterEllipsis"/>
                                    <Border Grid.Column="1" Height="8" Background="{DynamicResource BackgroundPanel}" CornerRadius="4" Margin="8,0">
                                        <Border Background="{DynamicResource SlackWarning}" CornerRadius="4" HorizontalAlignment="Left"
                                                Width="{Binding Percentage}"/>
                                    </Border>
                                    <TextBlock Grid.Column="2" Text="{Binding Percentage, StringFormat='{}{0:F0}%'}" FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="3" Text="{Binding PacketCount, StringFormat='{}{0:N0}'}" FontSize="{StaticResource FontSizeXS}" Foreground="{DynamicResource TextMutedBrush}" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="4" Text="{Binding BytesFormatted}" FontSize="{StaticResource FontSizeXS}" Foreground="{DynamicResource TextMutedBrush}" HorizontalAlignment="Right"/>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Action Button -->
            <Border Background="{DynamicResource BackgroundPanel}" CornerRadius="4" Padding="8">
                <Button Command="{Binding ViewInPacketAnalysisCommand}" Classes="action-btn primary"
                        Content="View Packets" HorizontalAlignment="Center"/>
            </Border>
        </StackPanel>
    </Border>

    <UserControl.Styles>
        <Style Selector="Button.close-btn">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.close-btn:pointerover">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        </Style>
        <Style Selector="Button.row-btn">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.row-btn:pointerover">
            <Setter Property="Background" Value="{StaticResource BackgroundPanel}"/>
        </Style>
        <Style Selector="Button.action-btn">
            <Setter Property="Background" Value="{DynamicResource BackgroundPanel}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BackgroundElevated}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.action-btn:pointerover">
            <Setter Property="Background" Value="{StaticResource BackgroundElevated}"/>
        </Style>
        <Style Selector="Button.action-btn.primary">
            <Setter Property="Background" Value="{DynamicResource SlackSuccess}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SlackSuccess}"/>
        </Style>
        <Style Selector="Button.action-btn.primary:pointerover">
            <Setter Property="Background" Value="{StaticResource SlackSuccess}"/>
        </Style>
    </UserControl.Styles>
</UserControl>
