<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PCAPAnalyzer.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="PCAPAnalyzer.UI.Views.AnomalyView"
             x:DataType="vm:AnomalyViewModel"
             Background="{DynamicResource BackgroundDark}">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource BackgroundPanel}" BorderBrush="{DynamicResource BackgroundElevated}" BorderThickness="0,0,0,1" Padding="24,16">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16">
                    <TextBlock Text="&#x1F52C;" FontSize="{StaticResource FontSizeHeading}"/>
                    <StackPanel>
                        <TextBlock Text="Anomaly Analysis" FontSize="{StaticResource FontSizeXL}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource TextSecondaryBrush}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="Showing {0} of {1} anomalies">
                                    <Binding Path="FilteredCount"/>
                                    <Binding Path="TotalCount"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button Command="{Binding ClearFiltersCommand}" Background="{DynamicResource BackgroundElevated}" BorderBrush="{DynamicResource BorderStrongBrush}" Padding="12,8">
                        <TextBlock Text="Clear Filters" FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </Button>
                    <Button Command="{Binding ExportToCsvCommand}" Background="{DynamicResource AccentPrimary}" BorderBrush="{DynamicResource AccentPrimary}" Padding="12,8">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="&#x1F4CA;" FontSize="{StaticResource FontSizeInput}"/>
                            <TextBlock Text="Export CSV" FontSize="{StaticResource FontSizeBase}" Foreground="White"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" ColumnDefinitions="280,*">
            <!-- Left Sidebar: Filters -->
            <Border Grid.Column="0" Background="{DynamicResource BackgroundPanel}" BorderBrush="{DynamicResource BackgroundElevated}" BorderThickness="0,0,1,0" Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="20">
                        <!-- Severity Section -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="SEVERITY" FontSize="{StaticResource FontSizeSmall}" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <StackPanel Spacing="4">
                                <CheckBox IsChecked="{Binding ShowCritical}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="&#x1F534;" FontSize="{StaticResource FontSizeBase}"/>
                                        <TextBlock Text="Critical" Foreground="{DynamicResource SlackDanger}"/>
                                        <TextBlock Text="{Binding CriticalCount, StringFormat='({0})'}" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="{StaticResource FontSizeSmall}"/>
                                    </StackPanel>
                                </CheckBox>
                                <CheckBox IsChecked="{Binding ShowHigh}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="&#x1F7E0;" FontSize="{StaticResource FontSizeBase}"/>
                                        <TextBlock Text="High" Foreground="{DynamicResource SlackWarning}"/>
                                        <TextBlock Text="{Binding HighCount, StringFormat='({0})'}" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="{StaticResource FontSizeSmall}"/>
                                    </StackPanel>
                                </CheckBox>
                                <CheckBox IsChecked="{Binding ShowMedium}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="&#x1F7E1;" FontSize="{StaticResource FontSizeBase}"/>
                                        <TextBlock Text="Medium" Foreground="{DynamicResource SlackInfo}"/>
                                        <TextBlock Text="{Binding MediumCount, StringFormat='({0})'}" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="{StaticResource FontSizeSmall}"/>
                                    </StackPanel>
                                </CheckBox>
                                <CheckBox IsChecked="{Binding ShowLow}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="&#x1F535;" FontSize="{StaticResource FontSizeBase}"/>
                                        <TextBlock Text="Low" Foreground="{DynamicResource SlackSuccess}"/>
                                        <TextBlock Text="{Binding LowCount, StringFormat='({0})'}" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="{StaticResource FontSizeSmall}"/>
                                    </StackPanel>
                                </CheckBox>
                            </StackPanel>
                        </StackPanel>

                        <!-- Category Section -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="CATEGORY" FontSize="{StaticResource FontSizeSmall}" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <StackPanel Spacing="4">
                                <CheckBox IsChecked="{Binding FilterNetwork}">
                                    <TextBlock Text="&#x1F310; Network" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                </CheckBox>
                                <CheckBox IsChecked="{Binding FilterTcp}">
                                    <TextBlock Text="&#x1F517; TCP" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                </CheckBox>
                                <CheckBox IsChecked="{Binding FilterApplication}">
                                    <TextBlock Text="&#x1F4F1; Application" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                </CheckBox>
                                <CheckBox IsChecked="{Binding FilterVoip}">
                                    <TextBlock Text="&#x1F4DE; VoIP" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                </CheckBox>
                                <CheckBox IsChecked="{Binding FilterIot}">
                                    <TextBlock Text="&#x1F50C; IoT" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                </CheckBox>
                                <CheckBox IsChecked="{Binding FilterSecurity}">
                                    <TextBlock Text="&#x26A0; Security" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                </CheckBox>
                                <CheckBox IsChecked="{Binding FilterMalformed}">
                                    <TextBlock Text="&#x2753; Malformed" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                </CheckBox>
                            </StackPanel>
                        </StackPanel>

                        <!-- Search -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="SEARCH" FontSize="{StaticResource FontSizeSmall}" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <TextBox Text="{Binding SearchText}" Watermark="Search anomalies..."
                                     Background="{DynamicResource BackgroundDark}" BorderBrush="{DynamicResource BackgroundElevated}" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Column="1" RowDefinitions="*,Auto">
                <!-- Anomaly List -->
                <DataGrid Grid.Row="0" ItemsSource="{Binding FilteredAnomalies}"
                          SelectedItem="{Binding SelectedAnomaly}"
                          AutoGenerateColumns="False" IsReadOnly="True"
                          Background="{DynamicResource BackgroundDark}" Foreground="{DynamicResource TextPrimaryBrush}"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="" Binding="{Binding SeverityIcon}" Width="40"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="180"/>
                        <DataGridTextColumn Header="" Binding="{Binding CategoryIcon}" Width="40"/>
                        <DataGridTextColumn Header="Source" Binding="{Binding SourceIP}" Width="140"/>
                        <DataGridTextColumn Header="Destination" Binding="{Binding DestinationIP}" Width="140"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                        <DataGridTextColumn Header="Time" Binding="{Binding TimeFormatted}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Detail Panel -->
                <Border Grid.Row="1" Background="{DynamicResource BackgroundPanel}" BorderBrush="{DynamicResource BackgroundElevated}" BorderThickness="0,1,0,0"
                        Padding="24,16" MinHeight="150" IsVisible="{Binding SelectedAnomaly, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="{Binding SelectedAnomaly.SeverityIcon}" FontSize="{StaticResource FontSizeXL}"/>
                                <TextBlock Text="{Binding SelectedAnomaly.Type}" FontSize="{StaticResource FontSizeLarge}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <Border Background="{Binding SelectedAnomaly.SeverityColor}" CornerRadius="4" Padding="8,2">
                                    <TextBlock Text="{Binding SelectedAnomaly.Severity}" FontSize="{StaticResource FontSizeSmall}" Foreground="White"/>
                                </Border>
                            </StackPanel>
                            <TextBlock Text="{Binding SelectedAnomaly.Description}" Foreground="{DynamicResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                            <StackPanel Orientation="Horizontal" Spacing="24">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="Connection:" Foreground="{DynamicResource TextMutedBrush}" FontSize="{StaticResource FontSizeBase}"/>
                                    <TextBlock Text="{Binding SelectedAnomaly.ConnectionInfo}" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="{StaticResource FontSizeBase}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="Detected:" Foreground="{DynamicResource TextMutedBrush}" FontSize="{StaticResource FontSizeBase}"/>
                                    <TextBlock Text="{Binding SelectedAnomaly.DetectedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="{StaticResource FontSizeBase}"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <Button Grid.Column="1" Command="{Binding ViewPacketsCommand}"
                                Background="{DynamicResource AccentPrimary}" BorderBrush="{DynamicResource AccentPrimary}" Padding="16,8"
                                VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="&#x1F4E6;" FontSize="{StaticResource FontSizeInput}"/>
                                <TextBlock Text="View Packets" FontSize="{StaticResource FontSizeBase}" Foreground="White"/>
                                <TextBlock Text="&#x2192;" FontSize="{StaticResource FontSizeBase}" Foreground="White"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>

    <!-- SLACK STYLE -->
    <UserControl.Styles>
        <Style Selector="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style Selector="DataGrid">
            <Setter Property="RowBackground" Value="{StaticResource BackgroundDark}"/>
        </Style>
        <Style Selector="DataGridRow:nth-child(even)">
            <Setter Property="Background" Value="{StaticResource BackgroundPanel}"/>
        </Style>
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource BackgroundElevated}"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>
        <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
            <Setter Property="Fill" Value="{StaticResource ColorPrimaryTintLight}"/>
        </Style>
    </UserControl.Styles>
</UserControl>
