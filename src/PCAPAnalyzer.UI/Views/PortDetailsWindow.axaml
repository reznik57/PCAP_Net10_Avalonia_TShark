<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:PCAPAnalyzer.UI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
        x:Class="PCAPAnalyzer.UI.Views.PortDetailsWindow"
        x:DataType="vm:PortDetailsViewModel"
        Title="{Binding WindowTitle}"
        WindowState="Maximized"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundDark}">
    
    <Grid Margin="20,20,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource BackgroundPanel}" CornerRadius="8" Padding="20,20,20,20" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Port Badge -->
                <Border Grid.Column="0" Background="{DynamicResource BackgroundCard}" CornerRadius="4" Padding="12,8" Margin="0,0,15,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Port}" FontSize="{StaticResource FontSizeXL}" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Text="/" FontSize="{StaticResource FontSizeLarge}" Foreground="{DynamicResource TextSecondaryBrush}" Margin="2,0"/>
                        <TextBlock Text="{Binding Protocol}" FontSize="{StaticResource FontSizeLarge}" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>
                
                <!-- Port Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding ServiceName}" FontSize="{StaticResource FontSizeHeading}" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <StackPanel Orientation="Horizontal" Spacing="20" Margin="0,5,0,0">
                        <TextBlock FontSize="{StaticResource FontSizeInput}" Foreground="{DynamicResource TextSecondaryBrush}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}Packets: {0:N0}">
                                    <Binding Path="TotalPackets"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        <TextBlock FontSize="{StaticResource FontSizeInput}" Foreground="{DynamicResource TextSecondaryBrush}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}Bytes: {0}">
                                    <Binding Path="FormattedBytes"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        <TextBlock FontSize="{StaticResource FontSizeInput}" Foreground="{DynamicResource TextSecondaryBrush}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}Unique IPs: {0:N0}">
                                    <Binding Path="UniqueIPs"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
                
                <!-- Close Button -->
                <Button Grid.Column="2"
                        Click="OnCloseClick"
                        Background="{DynamicResource BackgroundCard}"
                        BorderBrush="{DynamicResource BorderSubtleBrush}"
                        Padding="12,8">
                    <TextBlock Text="Close" FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource TextPrimaryBrush}"/>
                </Button>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Border Grid.Row="1" Background="{DynamicResource BackgroundPanel}" CornerRadius="8" Padding="10,10,10,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Filter Bar -->
                <Border Grid.Row="0" Background="{DynamicResource BackgroundCard}" CornerRadius="4" Padding="10,10,10,10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0"
                                 Text="{Binding FilterText}"
                                 Watermark="Filter by IP address..."
                                 Background="{DynamicResource BackgroundDark}"
                                 BorderBrush="{DynamicResource BorderSubtleBrush}"
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 Padding="8,5"
                                 Margin="0,0,10,0"/>

                        <ComboBox Grid.Column="1"
                                  SelectedItem="{Binding SelectedDirection}"
                                  ItemsSource="{Binding Directions}"
                                  Background="{DynamicResource BackgroundDark}"
                                  BorderBrush="{DynamicResource BorderSubtleBrush}"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  Width="120"
                                  Margin="0,0,10,0"/>

                        <Button Grid.Column="2"
                                Command="{Binding ExportCommand}"
                                Background="{DynamicResource SlackSuccess}"
                                BorderThickness="0"
                                Padding="12,5">
                            <TextBlock Text="Export" FontSize="{StaticResource FontSizeBase}" Foreground="White" FontWeight="SemiBold"/>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- Data Grid -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding FilteredPackets}"
                          Background="{DynamicResource BackgroundDark}"
                          BorderBrush="{DynamicResource BorderSubtleBrush}"
                          BorderThickness="1"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          CanUserReorderColumns="True"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="True"
                          AutoGenerateColumns="False">

                    <DataGrid.Styles>
                        <Style Selector="DataGridRow">
                            <Setter Property="Background" Value="{StaticResource BackgroundDark}"/>
                            <Setter Property="Height" Value="32"/>
                        </Style>
                        <Style Selector="DataGridRow:pointerover">
                            <Setter Property="Background" Value="{StaticResource BackgroundPanel}"/>
                        </Style>
                        <Style Selector="DataGridRow:selected">
                            <Setter Property="Background" Value="{StaticResource BackgroundCard}"/>
                        </Style>
                        <Style Selector="DataGridColumnHeader">
                            <Setter Property="Background" Value="{StaticResource BackgroundCard}"/>
                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Height" Value="36"/>
                            <Setter Property="SeparatorBrush" Value="{StaticResource BorderSubtleBrush}"/>
                        </Style>
                        <Style Selector="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            <Setter Property="FontSize" Value="12"/>
                        </Style>
                    </DataGrid.Styles>
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Packet #" 
                                            Binding="{Binding PacketNumber}" 
                                            Width="80"/>
                        <DataGridTextColumn Header="Time" 
                                            Binding="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss.fff}'}" 
                                            Width="100"/>
                        <DataGridTextColumn Header="Source IP" 
                                            Binding="{Binding SourceIP}" 
                                            Width="130"/>
                        <DataGridTextColumn Header="Src Port" 
                                            Binding="{Binding SourcePort}" 
                                            Width="70"/>
                        <DataGridTextColumn Header="Destination IP" 
                                            Binding="{Binding DestinationIP}" 
                                            Width="130"/>
                        <DataGridTextColumn Header="Dst Port" 
                                            Binding="{Binding DestinationPort}" 
                                            Width="70"/>
                        <DataGridTextColumn Header="Direction" 
                                            Binding="{Binding Direction}" 
                                            Width="80"/>
                        <DataGridTextColumn Header="Length" 
                                            Binding="{Binding Length}" 
                                            Width="80"/>
                        <DataGridTextColumn Header="Info" 
                                            Binding="{Binding Info}" 
                                            Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource BackgroundPanel}" CornerRadius="8" Padding="15,10" Margin="0,20,0,0">
            <Grid>
                <TextBlock HorizontalAlignment="Left" FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource TextSecondaryBrush}">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}Showing {0} of {1} packets">
                            <Binding Path="FilteredCount"/>
                            <Binding Path="TotalCount"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="20">
                    <TextBlock FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource TextSecondaryBrush}">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}Source Port: {0:N0}">
                                <Binding Path="SourcePortPackets"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                    <TextBlock FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource TextSecondaryBrush}">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}Destination Port: {0:N0}">
                                <Binding Path="DestinationPortPackets"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>