<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PCAPAnalyzer.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="900"
             x:Class="PCAPAnalyzer.UI.Views.ReportView"
             x:DataType="vm:ReportViewModel">

    <!-- SLACK STYLE -->
    <UserControl.Styles>
        <Style Selector="Border.report-card">
            <Setter Property="Background" Value="{DynamicResource BackgroundPanel}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BackgroundElevated}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20,20,20,20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style Selector="Border.config-section">
            <Setter Property="Background" Value="{DynamicResource BackgroundCard}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BackgroundElevated}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16,16,16,16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style Selector="TextBlock.section-title">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style Selector="Button.export-button">
            <Setter Property="Background" Value="{DynamicResource AccentPrimary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style Selector="Button.export-button:pointerover">
            <Setter Property="Background" Value="{StaticResource SlackInfo}"/>
        </Style>

        <Style Selector="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>

        <Style Selector="Border.severity-badge">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <Style Selector="Border.finding-card">
            <Setter Property="Background" Value="{DynamicResource BackgroundCard}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BackgroundElevated}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16,16,16,16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </UserControl.Styles>

    <Grid Background="{DynamicResource BackgroundDark}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="320" MaxWidth="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Configuration Panel -->
        <Border Grid.Column="0" Background="{DynamicResource BackgroundPanel}" BorderBrush="{DynamicResource BackgroundElevated}" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20,20,20,20">
                <StackPanel Spacing="20">
                    <!-- Header -->
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š Report Generator" FontSize="{StaticResource FontSizeXL}" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Text="Professional Network Analysis Reports" FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Report Type Selection -->
                    <Border Classes="config-section">
                        <StackPanel>
                            <TextBlock Text="Report Type" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding ReportTypes}"
                                     SelectedItem="{Binding SelectedReportType}"
                                     Width="280"
                                     Background="{DynamicResource BackgroundDark}"
                                     BorderBrush="{DynamicResource BackgroundElevated}"/>
                            <TextBlock Text="Choose the report format based on your audience"
                                      FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource TextMutedBrush}" Margin="0,4,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Report Sections -->
                    <Border Classes="config-section">
                        <StackPanel>
                            <TextBlock Text="Report Sections" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                            <CheckBox IsChecked="{Binding IncludeExecutiveSummary}" Content="Executive Summary"/>
                            <CheckBox IsChecked="{Binding IncludeSecurityFindings}" Content="Security Findings"/>
                            <CheckBox IsChecked="{Binding IncludePerformanceAnalysis}" Content="Performance Analysis"/>
                            <CheckBox IsChecked="{Binding IncludeComplianceCheck}" Content="Compliance Check"/>
                            <CheckBox IsChecked="{Binding IncludeRecommendations}" Content="Recommendations"/>
                            <CheckBox IsChecked="{Binding IncludeTechnicalDetails}" Content="Technical Details"/>
                            <CheckBox IsChecked="{Binding IncludeRemediationTimeline}" Content="Remediation Timeline"/>
                            <CheckBox IsChecked="{Binding IncludeNetworkDiagrams}" Content="Network Diagrams"/>
                        </StackPanel>
                    </Border>

                    <!-- Advanced Options -->
                    <Border Classes="config-section">
                        <StackPanel>
                            <TextBlock Text="Advanced Options" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                            <CheckBox IsChecked="{Binding IncludeRawData}" Content="Include Raw Data"/>
                            <CheckBox IsChecked="{Binding IncludePacketSamples}" Content="Include Packet Samples"/>
                            <CheckBox IsChecked="{Binding IncludeCostEstimates}" Content="Include Cost Estimates"/>

                            <StackPanel Margin="0,12,0,0">
                                <TextBlock Text="Minimum Severity" FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding SeverityLevels}"
                                         SelectedItem="{Binding MinimumSeverity}"
                                         Width="280"
                                         Background="{DynamicResource BackgroundDark}"
                                         BorderBrush="{DynamicResource BackgroundElevated}"/>
                            </StackPanel>

                            <StackPanel Margin="0,12,0,0">
                                <TextBlock Text="Max Findings per Category" FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider Grid.Column="0"
                                           Value="{Binding MaxFindingsPerCategory}"
                                           Minimum="5" Maximum="50"
                                           TickFrequency="5"
                                           IsSnapToTickEnabled="True"/>
                                    <TextBlock Grid.Column="1"
                                              Text="{Binding MaxFindingsPerCategory}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Spacing="8">
                        <Button Command="{Binding GenerateReportCommand}"
                               Classes="export-button"
                               Width="280"
                               IsEnabled="{Binding !IsGenerating}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="ðŸ”„" FontSize="{StaticResource FontSizeInput}" IsVisible="{Binding IsGenerating}"/>
                                <TextBlock Text="âš¡" FontSize="{StaticResource FontSizeInput}" IsVisible="{Binding !IsGenerating}"/>
                                <TextBlock Text="Generate Report"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding ResetConfigurationCommand}"
                               Background="{DynamicResource BackgroundCard}"
                               BorderBrush="{DynamicResource BackgroundElevated}"
                               BorderThickness="1"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Padding="12,8"
                               CornerRadius="6"
                               Width="280">
                            <TextBlock Text="Reset to Defaults"/>
                        </Button>
                    </StackPanel>

                    <!-- Status -->
                    <Border Background="{DynamicResource BackgroundCard}" CornerRadius="6" Padding="12,12,12,12">
                        <StackPanel>
                            <TextBlock Text="Status" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <TextBlock Text="{Binding GenerationStatus}"
                                      FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource AccentPrimary}"
                                      TextWrapping="Wrap" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Report Preview/Display -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Padding="24,24,24,24">
            <Grid>
                <StackPanel IsVisible="{Binding HasReport}">
                    <!-- Report Header -->
                    <Border Classes="report-card">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                <GradientStop Color="{StaticResource ReportGradientStart}" Offset="0"/>
                                <GradientStop Color="{StaticResource ReportGradientEnd}" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Network Security Analysis Report"
                                          FontSize="{StaticResource FontSizeHeading}" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="{Binding ReportGeneratedTime, StringFormat='Generated: {0}'}"
                                          FontSize="{StaticResource FontSizeBase}" Foreground="White" Opacity="0.9" Margin="0,8,0,0"/>
                                <TextBlock Text="{Binding SelectedReportType, StringFormat='Type: {0} Report'}"
                                          FontSize="{StaticResource FontSizeBase}" Foreground="White" Opacity="0.9" Margin="0,4,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Top">
                                <Button Command="{Binding ExportHtmlCommand}" Classes="export-button">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <TextBlock Text="ðŸ“„" FontSize="{StaticResource FontSizeBase}"/>
                                        <TextBlock Text="Export HTML"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding ExportPdfCommand}" Classes="export-button" Background="{DynamicResource SlackDanger}">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <TextBlock Text="ðŸ“‘" FontSize="{StaticResource FontSizeBase}"/>
                                        <TextBlock Text="Export PDF"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding ExportJsonCommand}" Classes="export-button" Background="{DynamicResource AccentPrimary}">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <TextBlock Text="{}{}" FontSize="{StaticResource FontSizeBase}"/>
                                        <TextBlock Text="Export JSON"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Executive Summary -->
                    <Border Classes="report-card" IsVisible="{Binding IncludeExecutiveSummary}">
                        <StackPanel>
                            <TextBlock Classes="section-title" Text="Executive Summary"/>
                            
                            <!-- Key Metrics Grid -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Security Score -->
                                <Border Grid.Column="0" Background="{DynamicResource BackgroundCard}" CornerRadius="6" Padding="16,16,16,16" Margin="0,0,8,0">
                                    <StackPanel>
                                        <TextBlock Text="SECURITY SCORE" FontSize="{StaticResource FontSizeXS}" FontWeight="Bold"
                                                  Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                        <TextBlock FontSize="{StaticResource FontSizeDisplay}" FontWeight="Bold">
                                            <TextBlock.Foreground>
                                                <MultiBinding Converter="{x:Static BoolConverters.And}">
                                                    <Binding Path="SecurityScore" Converter="{x:Static ObjectConverters.IsNotNull}"/>
                                                </MultiBinding>
                                            </TextBlock.Foreground>
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0:F0}">
                                                    <Binding Path="SecurityScore"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        <TextBlock Text="/100" FontSize="{StaticResource FontSizeInput}" Foreground="{DynamicResource TextMutedBrush}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Risk Level -->
                                <Border Grid.Column="1" Background="{DynamicResource BackgroundCard}" CornerRadius="6" Padding="16,16,16,16" Margin="4,0">
                                    <StackPanel>
                                        <TextBlock Text="RISK LEVEL" FontSize="{StaticResource FontSizeXS}" FontWeight="Bold"
                                                  Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding OverallRiskLevel}"
                                                  FontSize="{StaticResource FontSizeHeading}" FontWeight="Bold" Foreground="{DynamicResource SlackWarning}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Total Findings -->
                                <Border Grid.Column="2" Background="{DynamicResource BackgroundCard}" CornerRadius="6" Padding="16,16,16,16" Margin="4,0">
                                    <StackPanel>
                                        <TextBlock Text="TOTAL FINDINGS" FontSize="{StaticResource FontSizeXS}" FontWeight="Bold"
                                                  Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding TotalFindings}"
                                                  FontSize="{StaticResource FontSizeDisplay}" FontWeight="Bold" Foreground="{DynamicResource AccentPrimary}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Critical Issues -->
                                <Border Grid.Column="3" Background="{DynamicResource BackgroundCard}" CornerRadius="6" Padding="16,16,16,16" Margin="8,0,0,0">
                                    <StackPanel>
                                        <TextBlock Text="CRITICAL" FontSize="{StaticResource FontSizeXS}" FontWeight="Bold"
                                                  Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding CriticalFindings}"
                                                  FontSize="{StaticResource FontSizeDisplay}" FontWeight="Bold" Foreground="{DynamicResource SlackDanger}"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <TextBlock Text="{Binding ExecutiveSummaryText}"
                                      FontSize="{StaticResource FontSizeInput}" Foreground="{DynamicResource TextSecondaryBrush}"
                                      TextWrapping="Wrap" LineHeight="24"/>
                        </StackPanel>
                    </Border>

                    <!-- Security Findings -->
                    <Border Classes="report-card" IsVisible="{Binding IncludeSecurityFindings}">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Classes="section-title" Text="Security Findings"/>
                                
                                <!-- Severity Distribution -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                                    <Border Background="{StaticResource SeverityCriticalTint}" CornerRadius="4" Padding="8,4">
                                        <TextBlock Text="{Binding CriticalFindings, StringFormat='Critical: {0}'}"
                                                  FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource SlackDanger}" FontWeight="Medium"/>
                                    </Border>
                                    <Border Background="{StaticResource SeverityHighTint}" CornerRadius="4" Padding="8,4">
                                        <TextBlock Text="{Binding HighFindings, StringFormat='High: {0}'}"
                                                  FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource SlackWarning}" FontWeight="Medium"/>
                                    </Border>
                                    <Border Background="{StaticResource SeverityMediumTint}" CornerRadius="4" Padding="8,4">
                                        <TextBlock Text="{Binding MediumFindings, StringFormat='Medium: {0}'}"
                                                  FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource AccentPrimary}" FontWeight="Medium"/>
                                    </Border>
                                    <Border Background="{StaticResource SeverityLowTint}" CornerRadius="4" Padding="8,4">
                                        <TextBlock Text="{Binding LowFindings, StringFormat='Low: {0}'}"
                                                  FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource SlackSuccess}" FontWeight="Medium"/>
                                    </Border>
                                </StackPanel>
                            </Grid>

                            <ItemsControl ItemsSource="{Binding SecurityFindings}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:SecurityFindingViewModel">
                                        <Border Classes="finding-card">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Finding Header -->
                                                <Grid Grid.Row="0" Margin="0,0,0,12">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                                        <Border Background="{Binding SeverityColor}"
                                                               CornerRadius="4" Padding="8,3">
                                                            <TextBlock Text="{Binding Severity}"
                                                                      FontSize="{StaticResource FontSizeSmall}" FontWeight="Bold" Foreground="White"/>
                                                        </Border>
                                                        <TextBlock Text="{Binding Title}"
                                                                  FontSize="{StaticResource FontSizeInput}" FontWeight="SemiBold"
                                                                  Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                                    </StackPanel>

                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                                        <TextBlock Text="{Binding RiskScore, StringFormat='Risk Score: {0:F0}'}"
                                                                  FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding AffectedSystemsCount, StringFormat='ðŸ–¥ï¸ {0} systems'}"
                                                                  FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource SlackWarning}" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Grid>

                                                <!-- Description -->
                                                <TextBlock Grid.Row="1" Text="{Binding Description}"
                                                          FontSize="{StaticResource FontSizeMedium}" Foreground="{DynamicResource TextSecondaryBrush}"
                                                          TextWrapping="Wrap" Margin="0,0,0,12"/>

                                                <!-- Remediation -->
                                                <Border Grid.Row="2" Background="{StaticResource SeverityLowTintLight}" CornerRadius="4" Padding="12,12,12,12">
                                                    <StackPanel>
                                                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,6">
                                                            <TextBlock Text="ðŸ”§" FontSize="{StaticResource FontSizeBase}"/>
                                                            <TextBlock Text="Remediation" FontWeight="SemiBold"
                                                                      FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource SlackSuccess}"/>
                                                            <Border Background="{DynamicResource SlackWarning}" CornerRadius="3" Padding="4,2">
                                                                <TextBlock Text="{Binding RemediationPriority}"
                                                                          FontSize="{StaticResource FontSizeXS}" Foreground="White"/>
                                                            </Border>
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding RemediationSummary}"
                                                                  FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Recommendations -->
                    <Border Classes="report-card" IsVisible="{Binding IncludeRecommendations}">
                        <StackPanel>
                            <TextBlock Classes="section-title" Text="Recommendations"/>
                            
                            <ItemsControl ItemsSource="{Binding Recommendations}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:RecommendationViewModel">
                                        <Border Background="{DynamicResource BackgroundCard}" CornerRadius="6" Padding="16,16,16,16" Margin="0,0,0,12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,8">
                                                        <Border Background="{Binding PriorityColor}"
                                                               CornerRadius="3" Padding="6,2">
                                                            <TextBlock Text="{Binding Priority}"
                                                                      FontSize="{StaticResource FontSizeXS}" FontWeight="Bold" Foreground="White"/>
                                                        </Border>
                                                        <TextBlock Text="{Binding Title}"
                                                                  FontSize="{StaticResource FontSizeInput}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Description}"
                                                              FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource TextSecondaryBrush}"
                                                              TextWrapping="Wrap" Margin="0,0,0,8"/>
                                                    <TextBlock FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource SlackSuccess}">
                                                        <TextBlock.Text>
                                                            <MultiBinding StringFormat="âœ“ {0}">
                                                                <Binding Path="Benefit"/>
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                                    <TextBlock Text="{Binding ExpectedImprovement, StringFormat='+{0:F0}%'}"
                                                              FontSize="{StaticResource FontSizeXL}" FontWeight="Bold" Foreground="{DynamicResource SlackSuccess}"
                                                              HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Improvement" FontSize="{StaticResource FontSizeXS}" Foreground="{DynamicResource TextMutedBrush}"
                                                              HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding EstimatedTimeframe}"
                                                              FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource TextSecondaryBrush}"
                                                              HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Remediation Plan -->
                    <Border Classes="report-card" IsVisible="{Binding IncludeRemediationTimeline}">
                        <StackPanel>
                            <TextBlock Classes="section-title" Text="Remediation Timeline"/>
                            
                            <ItemsControl ItemsSource="{Binding RemediationPhases}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:RemediationPhaseViewModel">
                                        <Border Background="{DynamicResource BackgroundCard}" CornerRadius="6" Padding="16,16,16,16" Margin="0,0,0,12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Phase Number -->
                                                <Border Grid.Column="0" Background="{DynamicResource AccentPrimary}"
                                                       Width="40" Height="40" CornerRadius="20">
                                                    <TextBlock Text="{Binding PhaseNumber}"
                                                              FontSize="{StaticResource FontSizeXL}" FontWeight="Bold" Foreground="White"
                                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- Phase Details -->
                                                <StackPanel Grid.Column="1" Margin="16,0,0,0">
                                                    <TextBlock Text="{Binding Name}"
                                                              FontSize="{StaticResource FontSizeInput}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                    <TextBlock Text="{Binding Description}"
                                                              FontSize="{StaticResource FontSizeBase}" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                                                    <TextBlock FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource TextMutedBrush}" Margin="0,4,0,0">
                                                        <TextBlock.Text>
                                                            <MultiBinding StringFormat="ðŸ“… {0} â†’ {1}">
                                                                <Binding Path="StartDate"/>
                                                                <Binding Path="EndDate"/>
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                </StackPanel>

                                                <!-- Task Count -->
                                                <Border Grid.Column="2" Background="{DynamicResource BackgroundElevated}"
                                                       CornerRadius="4" Padding="8,4">
                                                    <TextBlock Text="{Binding TaskCount, StringFormat='{}{0} tasks'}"
                                                              FontSize="{StaticResource FontSizeSmall}" Foreground="{DynamicResource AccentPrimary}"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- No Report Message -->
                <Border IsVisible="{Binding !HasReport}"
                       Background="{DynamicResource BackgroundPanel}"
                       CornerRadius="12"
                       Padding="40,40,40,40"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š" FontSize="{StaticResource FontSizeDisplay}" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                        <TextBlock Text="No Report Generated"
                                  FontSize="{StaticResource FontSizeXL}" FontWeight="Bold"
                                  Foreground="{DynamicResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Configure report options and click 'Generate Report' to create a professional analysis report"
                                  FontSize="{StaticResource FontSizeMedium}" Foreground="{DynamicResource TextSecondaryBrush}"
                                  HorizontalAlignment="Center" TextWrapping="Wrap"
                                  MaxWidth="400" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>