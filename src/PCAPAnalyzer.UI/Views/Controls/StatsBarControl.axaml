<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:PCAPAnalyzer.UI.Models"
             xmlns:vm="using:PCAPAnalyzer.UI.ViewModels.Components"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PCAPAnalyzer.UI.Views.Controls.StatsBarControl"
             x:DataType="vm:StatsBarControlViewModel">

    <!-- ðŸ“Š Statistics Bar Control - Harmonized with FilterPanelControl Styling -->
    <Border Background="#161B22" BorderBrush="#30363D" BorderThickness="1"
            CornerRadius="6" Padding="20,16" Margin="0,0,0,16"
            BoxShadow="0 2 4 #00000020">
        <Grid RowDefinitions="Auto,12,Auto">
            <!-- Section Header with Accent Bar -->
            <Grid Grid.Row="0" ColumnDefinitions="Auto,*">
                <Border Grid.Column="0" Width="3" Height="20" Background="{Binding AccentColor, FallbackValue='#58A6FF'}"
                        CornerRadius="1.5" Margin="0,0,12,0" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="{Binding SectionTitle, FallbackValue='STATISTICS'}"
                           FontSize="13" FontWeight="Bold" Foreground="#E6EDF3" VerticalAlignment="Center"/>
            </Grid>

            <!-- Statistics Grid (Auto-responsive) -->
            <ItemsControl Grid.Row="2" ItemsSource="{Binding Stats}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="{Binding ColumnCount, FallbackValue=4}"
                                     HorizontalAlignment="Stretch"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="models:StatItem">
                        <!-- Individual Stat Card -->
                        <Border Background="#0D1117" BorderBrush="#21262D" BorderThickness="1"
                                CornerRadius="6" Padding="16,12" Margin="4">
                            <StackPanel Spacing="6">
                                <!-- Label -->
                                <TextBlock Text="{Binding Label}" FontSize="9" FontWeight="SemiBold"
                                           Foreground="#6E7681" LetterSpacing="0.5" TextWrapping="NoWrap"/>

                                <!-- Value with Icon -->
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <TextBlock Text="{Binding Icon}" FontSize="14" VerticalAlignment="Center"
                                               IsVisible="{Binding Icon, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                                    <TextBlock Text="{Binding Value}" FontSize="16" FontWeight="Bold"
                                               Foreground="{Binding ValueColor}" VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <!-- Secondary Text (Filtered stats) - Remove left margin for alignment -->
                                <TextBlock Text="{Binding SecondaryText}" FontSize="11"
                                           Foreground="{Binding SecondaryColor}"
                                           IsVisible="{Binding SecondaryText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="0,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</UserControl>
