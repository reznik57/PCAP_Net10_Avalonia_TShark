<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:PCAPAnalyzer.UI.Models"
             xmlns:vm="using:PCAPAnalyzer.UI.ViewModels.Components"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PCAPAnalyzer.UI.Views.Controls.StatsBarControl"
             x:DataType="vm:StatsBarControlViewModel">

    <!-- ðŸ“Š Statistics Bar Control - SLACK STYLE -->
    <Border Background="{DynamicResource BackgroundPanel}" BorderBrush="{DynamicResource BackgroundElevated}" BorderThickness="1"
            CornerRadius="12" Padding="20,16" Margin="0,0,0,16"
            BoxShadow="0 2 8 0 #00000026">
        <Grid RowDefinitions="Auto,12,Auto">
            <!-- Section Header -->
            <TextBlock Grid.Row="0" Text="{Binding SectionTitle, FallbackValue='STATISTICS'}"
                       FontSize="{StaticResource FontSizeBase}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"
                       LetterSpacing="0.5"/>

            <!-- Statistics Grid (Auto-responsive) -->
            <ItemsControl Grid.Row="2" ItemsSource="{Binding Stats}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="{Binding ColumnCount, FallbackValue=4}"
                                     HorizontalAlignment="Stretch"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="models:StatItem">
                        <!-- Individual Stat Card - SLACK STYLE (neutral borders) -->
                        <Border Background="{DynamicResource BackgroundCard}" BorderBrush="{DynamicResource BackgroundElevated}" BorderThickness="1"
                                CornerRadius="8" Padding="16,12" Margin="4">
                            <StackPanel Spacing="6">
                                <!-- Label -->
                                <TextBlock Text="{Binding Label}" FontSize="{StaticResource FontSizeXS}" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextMutedBrush}" LetterSpacing="0.5" TextWrapping="NoWrap"/>

                                <!-- Value with Icon -->
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <TextBlock Text="{Binding Icon}" FontSize="{StaticResource FontSizeInput}" VerticalAlignment="Center"
                                               IsVisible="{Binding Icon, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                                    <TextBlock Text="{Binding Value}" FontSize="{StaticResource FontSizeLarge}" FontWeight="SemiBold"
                                               Foreground="{Binding ValueColor}" VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <!-- Secondary Text (Filtered stats) -->
                                <TextBlock Text="{Binding SecondaryText}" FontSize="{StaticResource FontSizeSmall}"
                                           Foreground="{Binding SecondaryColor}"
                                           IsVisible="{Binding SecondaryText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="0,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</UserControl>
