<!-- src/PCAPAnalyzer.UI/Views/Controls/UnifiedFilterPanelControl.axaml -->
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PCAPAnalyzer.UI.ViewModels.Components"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="300"
             x:Class="PCAPAnalyzer.UI.Views.Controls.UnifiedFilterPanelControl"
             x:DataType="vm:UnifiedFilterPanelViewModel">

    <!-- Mode-tinted filter panel with smooth transitions -->
    <Border Background="{Binding PanelBackground}"
            BorderBrush="{Binding PanelBorder}"
            BorderThickness="2"
            CornerRadius="8" Padding="16,14" Margin="0,0,0,16">
        <Border.Transitions>
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
            </Transitions>
        </Border.Transitions>
        <StackPanel Spacing="12">

            <!-- Row 1: Mode Toggle + Apply/Clear Buttons -->
            <Grid ColumnDefinitions="Auto,16,Auto,*,Auto,8,Auto">
                <!-- Include Button (active class when in Include mode) -->
                <Button Grid.Column="0" Classes="mode-button include"
                        Classes.active="{Binding IsIncludeMode}"
                        Height="32" Padding="12,0"
                        Command="{Binding SetIncludeModeCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <TextBlock Text="+" FontSize="14" FontWeight="Bold"/>
                        <TextBlock Text="Include" FontSize="12" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <!-- Exclude Button (active class when in Exclude mode) -->
                <Button Grid.Column="2" Classes="mode-button exclude"
                        Classes.active="{Binding IsExcludeMode}"
                        Height="32" Padding="12,0"
                        Command="{Binding SetExcludeModeCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <TextBlock Text="−" FontSize="14" FontWeight="Bold"/>
                        <TextBlock Text="Exclude" FontSize="12" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <!-- Apply Button with Loading State -->
                <Button Grid.Column="4" Classes="primary-action" Height="32" Padding="16,0"
                        Command="{Binding ApplyFiltersCommand}"
                        IsEnabled="{Binding !IsApplyingFilter}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <!-- Normal state: Apply text -->
                        <TextBlock Text="Apply" FontSize="12" FontWeight="SemiBold"
                                   IsVisible="{Binding !IsApplyingFilter}"/>
                        <!-- Loading state: Spinner + Applying text -->
                        <StackPanel Orientation="Horizontal" Spacing="6"
                                    IsVisible="{Binding IsApplyingFilter}">
                            <Border Width="14" Height="14" CornerRadius="7"
                                    BorderBrush="#FFFFFF" BorderThickness="2"
                                    Classes="spinner"/>
                            <TextBlock Text="Applying..." FontSize="12" FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>
                </Button>

                <!-- Clear Button -->
                <Button Grid.Column="6" Classes="secondary-action" Height="32" Padding="16,0"
                        Command="{Binding ClearFiltersCommand}"
                        IsEnabled="{Binding !IsApplyingFilter}">
                    <TextBlock Text="Clear" FontSize="12"/>
                </Button>
            </Grid>

            <!-- Progress Bar (visible during filtering) - Animated indeterminate -->
            <Border Background="#161B22" CornerRadius="4" Padding="10,8"
                    IsVisible="{Binding IsApplyingFilter}">
                <StackPanel Spacing="6">
                    <TextBlock Text="Filtering packets..." FontSize="11" Foreground="#58A6FF"/>
                    <ProgressBar Height="8" Background="#30363D" Foreground="#58A6FF"
                                 IsIndeterminate="True" CornerRadius="4"/>
                </StackPanel>
            </Border>

            <!-- Row 2: Include Summary (green border) -->
            <Border Background="#0D1117" BorderBrush="#2EA043" BorderThickness="1"
                    CornerRadius="6" Padding="10,6"
                    IsVisible="{Binding Summary.HasIncludeFilters}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="+" FontSize="12" FontWeight="Bold" Foreground="#3FB950"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Including:" FontSize="11" Foreground="#7EE787"
                               VerticalAlignment="Center"/>
                    <ItemsControl ItemsSource="{Binding Summary.IncludeChips}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="6"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1A3D1A" BorderBrush="#2EA043" BorderThickness="1"
                                        CornerRadius="10" Padding="8,3">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <TextBlock Text="{Binding TypedLabel}" FontSize="11"
                                                   Foreground="#7EE787" VerticalAlignment="Center"/>
                                        <Button Background="Transparent" BorderThickness="0"
                                                Padding="2" Cursor="Hand"
                                                Command="{Binding RemoveCommand}">
                                            <TextBlock Text="×" Foreground="#F85149" FontSize="10"/>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Row 2b: Exclude Summary (red border) -->
            <Border Background="#0D1117" BorderBrush="#F85149" BorderThickness="1"
                    CornerRadius="6" Padding="10,6"
                    IsVisible="{Binding Summary.HasExcludeFilters}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="−" FontSize="14" FontWeight="Bold" Foreground="#F85149"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Excluding:" FontSize="11" Foreground="#FF7B72"
                               VerticalAlignment="Center"/>
                    <ItemsControl ItemsSource="{Binding Summary.ExcludeChips}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="6"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#3D1A1A" BorderBrush="#F85149" BorderThickness="1"
                                        CornerRadius="10" Padding="8,3">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <TextBlock Text="{Binding TypedLabel}" FontSize="11"
                                                   Foreground="#FF7B72" VerticalAlignment="Center"/>
                                        <Button Background="Transparent" BorderThickness="0"
                                                Padding="2" Cursor="Hand"
                                                Command="{Binding RemoveCommand}">
                                            <TextBlock Text="×" Foreground="#F85149" FontSize="10"/>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Row 3: Global IP/Port Inputs (shared across all tabs) - neutral styling -->
            <Grid ColumnDefinitions="*,16,*,16,*">
                <!-- Source IP -->
                <StackPanel Grid.Column="0" Spacing="4">
                    <TextBlock Text="Source IP" FontSize="11" Foreground="#8B949E"/>
                    <TextBox Text="{Binding SourceIPInput}"
                             Watermark="e.g. 192.168.1.0/24"
                             Classes="filter-input"/>
                </StackPanel>

                <!-- Destination IP -->
                <StackPanel Grid.Column="2" Spacing="4">
                    <TextBlock Text="Destination IP" FontSize="11" Foreground="#8B949E"/>
                    <TextBox Text="{Binding DestinationIPInput}"
                             Watermark="e.g. 10.0.0.1"
                             Classes="filter-input"/>
                </StackPanel>

                <!-- Port Range -->
                <StackPanel Grid.Column="4" Spacing="4">
                    <TextBlock Text="Port Range" FontSize="11" Foreground="#8B949E"/>
                    <TextBox Text="{Binding PortRangeInput}"
                             Watermark="e.g. 80-443"
                             Classes="filter-input"/>
                </StackPanel>
            </Grid>

            <!-- Row 4: Filter Category Tabs with Indicator Dots -->
            <TabControl SelectedIndex="{Binding SelectedTabIndex}">
                <!-- General Tab with filter indicator -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="General"/>
                            <Ellipse Width="6" Height="6" Fill="#3FB950" VerticalAlignment="Center"
                                     IsVisible="{Binding GeneralHasIncludeFilters}"/>
                            <Ellipse Width="6" Height="6" Fill="#F85149" VerticalAlignment="Center"
                                     IsVisible="{Binding GeneralHasExcludeFilters}"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Padding="16,12" Background="#1C2128" CornerRadius="0,6,6,6" BorderBrush="#30363D" BorderThickness="1">
                        <StackPanel Spacing="12" DataContext="{Binding GeneralTab}">
                            <!-- Protocols Row -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Protocols" FontSize="11" Foreground="#8B949E" FontWeight="SemiBold"/>
                                <ItemsControl ItemsSource="{Binding ProtocolChips}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="vm:FilterChipViewModel">
                                            <Button Content="{Binding Name}"
                                                    Command="{Binding ToggleCommand}"
                                                    Classes="filter-chip"
                                                    Classes.chip-included="{Binding IsIncluded}"
                                                    Classes.chip-excluded="{Binding IsExcluded}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- Security Row -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Security" FontSize="11" Foreground="#8B949E" FontWeight="SemiBold"/>
                                <ItemsControl ItemsSource="{Binding SecurityChips}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="vm:FilterChipViewModel">
                                            <Button Content="{Binding Name}"
                                                    Command="{Binding ToggleCommand}"
                                                    Classes="filter-chip"
                                                    Classes.chip-included="{Binding IsIncluded}"
                                                    Classes.chip-excluded="{Binding IsExcluded}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </TabItem>

                <!-- Threats Tab with filter indicator -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="Threats"/>
                            <Ellipse Width="6" Height="6" Fill="#3FB950" VerticalAlignment="Center"
                                     IsVisible="{Binding ThreatsHasIncludeFilters}"/>
                            <Ellipse Width="6" Height="6" Fill="#F85149" VerticalAlignment="Center"
                                     IsVisible="{Binding ThreatsHasExcludeFilters}"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Padding="16,12" Background="#1C2128" CornerRadius="0,6,6,6" BorderBrush="#30363D" BorderThickness="1">
                        <StackPanel Spacing="12" DataContext="{Binding ThreatsTab}">
                            <!-- Severity Row -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Severity" FontSize="11" Foreground="#8B949E" FontWeight="SemiBold"/>
                                <ItemsControl ItemsSource="{Binding SeverityChips}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="vm:FilterChipViewModel">
                                            <Button Content="{Binding Name}"
                                                    Command="{Binding ToggleCommand}"
                                                    Classes="filter-chip"
                                                    Classes.chip-included="{Binding IsIncluded}"
                                                    Classes.chip-excluded="{Binding IsExcluded}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- Category Row -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Category" FontSize="11" Foreground="#8B949E" FontWeight="SemiBold"/>
                                <ItemsControl ItemsSource="{Binding ThreatCategoryChips}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="vm:FilterChipViewModel">
                                            <Button Content="{Binding Name}"
                                                    Command="{Binding ToggleCommand}"
                                                    Classes="filter-chip"
                                                    Classes.chip-included="{Binding IsIncluded}"
                                                    Classes.chip-excluded="{Binding IsExcluded}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- Search Input -->
                            <StackPanel Spacing="4">
                                <TextBlock Text="Search" FontSize="11" Foreground="#8B949E"/>
                                <TextBox Text="{Binding SearchInput}"
                                         Watermark="e.g. Port Scan, Cleartext Auth"
                                         Classes="filter-input"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </TabItem>

                <!-- Anomalies Tab with filter indicator -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="Anomalies"/>
                            <Ellipse Width="6" Height="6" Fill="#3FB950" VerticalAlignment="Center"
                                     IsVisible="{Binding AnomaliesHasIncludeFilters}"/>
                            <Ellipse Width="6" Height="6" Fill="#F85149" VerticalAlignment="Center"
                                     IsVisible="{Binding AnomaliesHasExcludeFilters}"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Padding="16,12" Background="#1C2128" CornerRadius="0,6,6,6" BorderBrush="#30363D" BorderThickness="1">
                        <StackPanel Spacing="12" DataContext="{Binding AnomaliesTab}">
                            <!-- Severity Row -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Severity" FontSize="11" Foreground="#8B949E" FontWeight="SemiBold"/>
                                <ItemsControl ItemsSource="{Binding SeverityChips}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="vm:FilterChipViewModel">
                                            <Button Content="{Binding Name}"
                                                    Command="{Binding ToggleCommand}"
                                                    Classes="filter-chip"
                                                    Classes.chip-included="{Binding IsIncluded}"
                                                    Classes.chip-excluded="{Binding IsExcluded}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- Category Row -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Category" FontSize="11" Foreground="#8B949E" FontWeight="SemiBold"/>
                                <ItemsControl ItemsSource="{Binding CategoryChips}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="vm:FilterChipViewModel">
                                            <Button Content="{Binding Name}"
                                                    Command="{Binding ToggleCommand}"
                                                    Classes="filter-chip"
                                                    Classes.chip-included="{Binding IsIncluded}"
                                                    Classes.chip-excluded="{Binding IsExcluded}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- Detector Row -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Detectors" FontSize="11" Foreground="#8B949E" FontWeight="SemiBold"/>
                                <ItemsControl ItemsSource="{Binding DetectorChips}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="vm:FilterChipViewModel">
                                            <Button Content="{Binding Name}"
                                                    Command="{Binding ToggleCommand}"
                                                    Classes="filter-chip"
                                                    Classes.chip-included="{Binding IsIncluded}"
                                                    Classes.chip-excluded="{Binding IsExcluded}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- Search Input -->
                            <StackPanel Spacing="4">
                                <TextBlock Text="Search" FontSize="11" Foreground="#8B949E"/>
                                <TextBox Text="{Binding SearchInput}"
                                         Watermark="e.g. SYN Flood, Cryptomining"
                                         Classes="filter-input"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </TabItem>

                <!-- VoiceQoS Tab with filter indicator -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="VoiceQoS"/>
                            <Ellipse Width="6" Height="6" Fill="#3FB950" VerticalAlignment="Center"
                                     IsVisible="{Binding VoiceQoSHasIncludeFilters}"/>
                            <Ellipse Width="6" Height="6" Fill="#F85149" VerticalAlignment="Center"
                                     IsVisible="{Binding VoiceQoSHasExcludeFilters}"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Padding="16,12" Background="#1C2128" CornerRadius="0,6,6,6" BorderBrush="#30363D" BorderThickness="1">
                        <StackPanel Spacing="12" DataContext="{Binding VoiceQoSTab}">
                            <!-- Codecs Row -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Codecs" FontSize="11" Foreground="#8B949E" FontWeight="SemiBold"/>
                                <ItemsControl ItemsSource="{Binding CodecChips}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="vm:FilterChipViewModel">
                                            <Button Content="{Binding Name}"
                                                    Command="{Binding ToggleCommand}"
                                                    Classes="filter-chip"
                                                    Classes.chip-included="{Binding IsIncluded}"
                                                    Classes.chip-excluded="{Binding IsExcluded}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- Quality Row -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Quality" FontSize="11" Foreground="#8B949E" FontWeight="SemiBold"/>
                                <ItemsControl ItemsSource="{Binding QualityChips}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="vm:FilterChipViewModel">
                                            <Button Content="{Binding Name}"
                                                    Command="{Binding ToggleCommand}"
                                                    Classes="filter-chip"
                                                    Classes.chip-included="{Binding IsIncluded}"
                                                    Classes.chip-excluded="{Binding IsExcluded}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- Issues Row -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Issues" FontSize="11" Foreground="#8B949E" FontWeight="SemiBold"/>
                                <ItemsControl ItemsSource="{Binding IssueChips}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="vm:FilterChipViewModel">
                                            <Button Content="{Binding Name}"
                                                    Command="{Binding ToggleCommand}"
                                                    Classes="filter-chip"
                                                    Classes.chip-included="{Binding IsIncluded}"
                                                    Classes.chip-excluded="{Binding IsExcluded}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- Threshold Inputs -->
                            <Grid ColumnDefinitions="*,16,*">
                                <StackPanel Grid.Column="0" Spacing="4">
                                    <TextBlock Text="Jitter Threshold" FontSize="11" Foreground="#8B949E"/>
                                    <TextBox Text="{Binding JitterThresholdInput}"
                                             Watermark="e.g. 30 ms"
                                             Classes="filter-input"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2" Spacing="4">
                                    <TextBlock Text="Latency Threshold" FontSize="11" Foreground="#8B949E"/>
                                    <TextBox Text="{Binding LatencyThresholdInput}"
                                             Watermark="e.g. 150 ms"
                                             Classes="filter-input"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </TabItem>

                <!-- Country Tab with filter indicator -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="Country"/>
                            <Ellipse Width="6" Height="6" Fill="#3FB950" VerticalAlignment="Center"
                                     IsVisible="{Binding CountryHasIncludeFilters}"/>
                            <Ellipse Width="6" Height="6" Fill="#F85149" VerticalAlignment="Center"
                                     IsVisible="{Binding CountryHasExcludeFilters}"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Padding="16,12" Background="#1C2128" CornerRadius="0,6,6,6" BorderBrush="#30363D" BorderThickness="1">
                        <StackPanel Spacing="12" DataContext="{Binding CountryTab}">
                            <!-- Direction Row -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Direction" FontSize="11" Foreground="#8B949E" FontWeight="SemiBold"/>
                                <ItemsControl ItemsSource="{Binding DirectionChips}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="vm:FilterChipViewModel">
                                            <Button Content="{Binding Name}"
                                                    Command="{Binding ToggleCommand}"
                                                    Classes="filter-chip"
                                                    Classes.chip-included="{Binding IsIncluded}"
                                                    Classes.chip-excluded="{Binding IsExcluded}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- Regions Row -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Regions" FontSize="11" Foreground="#8B949E" FontWeight="SemiBold"/>
                                <ItemsControl ItemsSource="{Binding RegionChips}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="vm:FilterChipViewModel">
                                            <Button Content="{Binding Name}"
                                                    Command="{Binding ToggleCommand}"
                                                    Classes="filter-chip"
                                                    Classes.chip-included="{Binding IsIncluded}"
                                                    Classes.chip-excluded="{Binding IsExcluded}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- Countries Row -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="Countries" FontSize="11" Foreground="#8B949E" FontWeight="SemiBold"/>
                                <ItemsControl ItemsSource="{Binding CountryChips}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="vm:FilterChipViewModel">
                                            <Button Content="{Binding Name}"
                                                    Command="{Binding ToggleCommand}"
                                                    Classes="filter-chip"
                                                    Classes.chip-included="{Binding IsIncluded}"
                                                    Classes.chip-excluded="{Binding IsExcluded}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- Country Search Input -->
                            <StackPanel Spacing="4">
                                <TextBlock Text="Country Search" FontSize="11" Foreground="#8B949E"/>
                                <TextBox Text="{Binding CountrySearchInput}"
                                         Watermark="e.g. CA, NL, SE"
                                         Classes="filter-input"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </TabItem>
            </TabControl>

        </StackPanel>
    </Border>

    <UserControl.Styles>
        <!-- Mode Toggle Buttons -->
        <Style Selector="Button.mode-button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        <!-- Include button: inactive = grey, active = green (persistent) -->
        <Style Selector="Button.mode-button.include">
            <Setter Property="Background" Value="#21262D"/>
            <Setter Property="BorderBrush" Value="#30363D"/>
            <Setter Property="Foreground" Value="#8B949E"/>
        </Style>
        <Style Selector="Button.mode-button.include:pointerover">
            <Setter Property="Background" Value="#30363D"/>
            <Setter Property="BorderBrush" Value="#484F58"/>
        </Style>
        <Style Selector="Button.mode-button.include.active">
            <Setter Property="Background" Value="#238636"/>
            <Setter Property="BorderBrush" Value="#2EA043"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        <Style Selector="Button.mode-button.include.active:pointerover">
            <Setter Property="Background" Value="#2EA043"/>
            <Setter Property="BorderBrush" Value="#3FB950"/>
        </Style>
        <!-- Exclude button: inactive = grey, active = red (persistent) -->
        <Style Selector="Button.mode-button.exclude">
            <Setter Property="Background" Value="#21262D"/>
            <Setter Property="BorderBrush" Value="#30363D"/>
            <Setter Property="Foreground" Value="#8B949E"/>
        </Style>
        <Style Selector="Button.mode-button.exclude:pointerover">
            <Setter Property="Background" Value="#30363D"/>
            <Setter Property="BorderBrush" Value="#484F58"/>
        </Style>
        <Style Selector="Button.mode-button.exclude.active">
            <Setter Property="Background" Value="#DA3633"/>
            <Setter Property="BorderBrush" Value="#F85149"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        <Style Selector="Button.mode-button.exclude.active:pointerover">
            <Setter Property="Background" Value="#F85149"/>
            <Setter Property="BorderBrush" Value="#FF6B6B"/>
        </Style>

        <!-- Card-style TabControl -->
        <Style Selector="TabControl">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="TabControl > TabItem">
            <Setter Property="Background" Value="#0D1117"/>
            <Setter Property="Foreground" Value="#6E7681"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="CornerRadius" Value="6,6,0,0"/>
            <Setter Property="BorderThickness" Value="1,1,1,0"/>
            <Setter Property="BorderBrush" Value="#21262D"/>
        </Style>
        <Style Selector="TabControl > TabItem:pointerover">
            <Setter Property="Background" Value="#161B22"/>
            <Setter Property="Foreground" Value="#8B949E"/>
        </Style>
        <Style Selector="TabControl > TabItem:selected">
            <Setter Property="Background" Value="#1C2128"/>
            <Setter Property="Foreground" Value="#E6EDF3"/>
            <Setter Property="BorderBrush" Value="#30363D"/>
            <Setter Property="BorderThickness" Value="1,2,1,0"/>
        </Style>

        <!-- Filter Badge Buttons - Compact badge style -->
        <Style Selector="Button.filter-chip">
            <Setter Property="Background" Value="#21262D"/>
            <Setter Property="BorderBrush" Value="#30363D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#8B949E"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="0,0,4,4"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontFamily" Value="Cascadia Code, Consolas, monospace"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.15"/>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.15"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.filter-chip:pointerover">
            <Setter Property="Background" Value="#30363D"/>
            <Setter Property="BorderBrush" Value="#484F58"/>
        </Style>

        <!-- Badge INCLUDED state (green) -->
        <Style Selector="Button.filter-chip.chip-included">
            <Setter Property="Background" Value="#1A3D1A"/>
            <Setter Property="BorderBrush" Value="#2EA043"/>
            <Setter Property="Foreground" Value="#7EE787"/>
        </Style>
        <Style Selector="Button.filter-chip.chip-included:pointerover">
            <Setter Property="Background" Value="#2A4D2A"/>
            <Setter Property="BorderBrush" Value="#3FB950"/>
        </Style>

        <!-- Badge EXCLUDED state (red) -->
        <Style Selector="Button.filter-chip.chip-excluded">
            <Setter Property="Background" Value="#3D1A1A"/>
            <Setter Property="BorderBrush" Value="#F85149"/>
            <Setter Property="Foreground" Value="#FF7B72"/>
        </Style>
        <Style Selector="Button.filter-chip.chip-excluded:pointerover">
            <Setter Property="Background" Value="#4D2A2A"/>
            <Setter Property="BorderBrush" Value="#F97583"/>
        </Style>

        <!-- Filter Input TextBox - Neutral styling -->
        <Style Selector="TextBox.filter-input">
            <Setter Property="Background" Value="#0D1117"/>
            <Setter Property="BorderBrush" Value="#30363D"/>
            <Setter Property="Foreground" Value="#C9D1D9"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>

        <!-- Action Buttons -->
        <Style Selector="Button.primary-action">
            <Setter Property="Background" Value="#238636"/>
            <Setter Property="BorderBrush" Value="#2EA043"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.primary-action:pointerover">
            <Setter Property="Background" Value="#2EA043"/>
        </Style>
        <Style Selector="Button.secondary-action">
            <Setter Property="Background" Value="#21262D"/>
            <Setter Property="BorderBrush" Value="#30363D"/>
            <Setter Property="Foreground" Value="#8B949E"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.secondary-action:pointerover">
            <Setter Property="Background" Value="#30363D"/>
        </Style>
    </UserControl.Styles>
</UserControl>
