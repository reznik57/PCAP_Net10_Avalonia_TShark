<!-- src/PCAPAnalyzer.UI/Views/Controls/UnifiedFilterPanelControl.axaml -->
<!-- SLACK-STYLE COLLAPSIBLE FILTER PANEL -->
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PCAPAnalyzer.UI.ViewModels.Components"
             xmlns:conv="using:PCAPAnalyzer.UI.Converters"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="300"
             x:Class="PCAPAnalyzer.UI.Views.Controls.UnifiedFilterPanelControl"
             x:DataType="vm:UnifiedFilterPanelViewModel">

    <!-- Slack-style filter panel: collapsible, minimal borders, warm colors -->
    <Border Background="{DynamicResource BackgroundPanel}"
            BorderBrush="{DynamicResource BackgroundElevated}"
            BorderThickness="1"
            CornerRadius="12"
            Padding="0"
            Margin="0,0,0,16"
            BoxShadow="0 2 8 0 #00000026">

        <StackPanel>
            <!-- â•â•â• COLLAPSED HEADER BAR (always visible) â•â•â• -->
            <Border Padding="16,12" Background="{DynamicResource BackgroundPanel}" CornerRadius="12,12,0,0">
                <Grid ColumnDefinitions="Auto,Auto,*,Auto,8,Auto">
                    <!-- Expand/Collapse Toggle -->
                    <Button Grid.Column="0"
                            Command="{Binding ToggleExpandedCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="8,6"
                            CornerRadius="6"
                            Cursor="Hand"
                            VerticalAlignment="Center">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="{StaticResource BackgroundElevated}"/>
                            </Style>
                        </Button.Styles>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="ðŸ”" FontSize="{StaticResource FontSizeInput}" VerticalAlignment="Center"/>
                            <TextBlock Text="Filters" FontSize="{StaticResource FontSizeMedium}" FontWeight="Medium" Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ExpandCollapseIcon}" FontSize="{StaticResource FontSizeXS}" Foreground="{DynamicResource TextMutedBrush}" VerticalAlignment="Center"/>
                            <!-- Active filter count badge -->
                            <Border Background="{DynamicResource AccentPrimary}" CornerRadius="10" Padding="6,2"
                                    IsVisible="{Binding HasActiveFilters}" VerticalAlignment="Center">
                                <TextBlock Text="{Binding ActiveFilterCount}" FontSize="{StaticResource FontSizeXS}" FontWeight="SemiBold" Foreground="White"/>
                            </Border>
                        </StackPanel>
                    </Button>

                    <!-- Include/Exclude Segmented Control (pill toggle) -->
                    <Border Grid.Column="1" Background="{DynamicResource BackgroundCard}" CornerRadius="14" Padding="3" Margin="12,0,0,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="2">
                            <Button Command="{Binding SetIncludeModeCommand}"
                                    Padding="10,4" CornerRadius="12" BorderThickness="0" Cursor="Hand"
                                    Classes="mode-toggle-btn"
                                    Classes.active="{Binding IsIncludeMode}">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="+" FontSize="{StaticResource FontSizeBase}" FontWeight="Bold" Classes="mode-toggle-text"/>
                                    <TextBlock Text="Include" FontSize="{StaticResource FontSizeSmall}" FontWeight="Medium" Classes="mode-toggle-text"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding SetExcludeModeCommand}"
                                    Padding="10,4" CornerRadius="12" BorderThickness="0" Cursor="Hand"
                                    Classes="mode-toggle-btn exclude"
                                    Classes.active="{Binding IsExcludeMode}">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="âˆ’" FontSize="{StaticResource FontSizeBase}" FontWeight="Bold" Classes="mode-toggle-text"/>
                                    <TextBlock Text="Exclude" FontSize="{StaticResource FontSizeSmall}" FontWeight="Medium" Classes="mode-toggle-text"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Spacer -->
                    <Border Grid.Column="2"/>

                    <!-- Apply Button -->
                    <Button Grid.Column="3"
                            Command="{Binding ApplyFiltersCommand}"
                            IsEnabled="{Binding !IsApplyingFilter}"
                            Background="{DynamicResource AccentPrimary}" Foreground="White"
                            BorderThickness="0" CornerRadius="6"
                            Padding="16,6" Cursor="Hand">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="{StaticResource AccentPrimary}"/>
                            </Style>
                            <Style Selector="Button:disabled">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Style>
                        </Button.Styles>
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="Apply" FontSize="{StaticResource FontSizeBase}" FontWeight="Medium" IsVisible="{Binding !IsApplyingFilter}"/>
                            <TextBlock Text="Applying..." FontSize="{StaticResource FontSizeBase}" FontWeight="Medium" IsVisible="{Binding IsApplyingFilter}"/>
                        </StackPanel>
                    </Button>

                    <!-- Clear Button -->
                    <Button Grid.Column="5"
                            Command="{Binding ClearFiltersCommand}"
                            IsEnabled="{Binding !IsApplyingFilter}"
                            Background="Transparent" Foreground="{DynamicResource TextPrimaryBrush}"
                            BorderBrush="{DynamicResource BorderStrongBrush}" BorderThickness="1" CornerRadius="6"
                            Padding="16,6" Cursor="Hand">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="{StaticResource BackgroundElevated}"/>
                            </Style>
                        </Button.Styles>
                        <TextBlock Text="Clear" FontSize="{StaticResource FontSizeBase}"/>
                    </Button>
                </Grid>
            </Border>

            <!-- â•â•â• ACTIVE FILTER CHIPS (below header, visible only when active) â•â•â• -->
            <!-- INCLUDE Filters Row -->
            <Border Background="{DynamicResource BackgroundCard}" Padding="16,10"
                    IsVisible="{Binding Summary.HasIncludeFilters}"
                    BorderBrush="{DynamicResource BackgroundElevated}" BorderThickness="0,0,0,1">
                <StackPanel Spacing="8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="INCLUDE" FontSize="{StaticResource FontSizeXS}" FontWeight="Bold"
                                   Foreground="{DynamicResource SlackSuccess}" VerticalAlignment="Center"/>
                        <TextBlock Text="(" FontSize="{StaticResource FontSizeXS}" Foreground="{DynamicResource TextMutedBrush}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Summary.IncludeChips.Count}" FontSize="{StaticResource FontSizeXS}" Foreground="{DynamicResource TextMutedBrush}" VerticalAlignment="Center"/>
                        <TextBlock Text="groups)" FontSize="{StaticResource FontSizeXS}" Foreground="{DynamicResource TextMutedBrush}" VerticalAlignment="Center" Margin="-4,0,0,0"/>
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding Summary.IncludeChips}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource SlackSuccess}" CornerRadius="14" Padding="10,5" Margin="0,0,8,8">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="{Binding TypedLabel}" FontSize="{StaticResource FontSizeSmall}" Foreground="White" VerticalAlignment="Center"/>
                                        <Button Background="Transparent" BorderThickness="0" Padding="0" Cursor="Hand"
                                                Command="{Binding RemoveCommand}" VerticalAlignment="Center">
                                            <TextBlock Text="Ã—" Foreground="White" FontSize="{StaticResource FontSizeBase}" FontWeight="Bold" Opacity="0.8"/>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- EXCLUDE Filters Row -->
            <Border Background="{DynamicResource BackgroundCard}" Padding="16,10"
                    IsVisible="{Binding Summary.HasExcludeFilters}"
                    BorderBrush="{DynamicResource BackgroundElevated}" BorderThickness="0,0,0,1">
                <StackPanel Spacing="8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="EXCLUDE" FontSize="{StaticResource FontSizeXS}" FontWeight="Bold"
                                   Foreground="{DynamicResource SlackDanger}" VerticalAlignment="Center"/>
                        <TextBlock Text="(" FontSize="{StaticResource FontSizeXS}" Foreground="{DynamicResource TextMutedBrush}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Summary.ExcludeChips.Count}" FontSize="{StaticResource FontSizeXS}" Foreground="{DynamicResource TextMutedBrush}" VerticalAlignment="Center"/>
                        <TextBlock Text="groups)" FontSize="{StaticResource FontSizeXS}" Foreground="{DynamicResource TextMutedBrush}" VerticalAlignment="Center" Margin="-4,0,0,0"/>
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding Summary.ExcludeChips}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource SlackDanger}" CornerRadius="14" Padding="10,5" Margin="0,0,8,8">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="{Binding TypedLabel}" FontSize="{StaticResource FontSizeSmall}" Foreground="White" VerticalAlignment="Center"/>
                                        <Button Background="Transparent" BorderThickness="0" Padding="0" Cursor="Hand"
                                                Command="{Binding RemoveCommand}" VerticalAlignment="Center">
                                            <TextBlock Text="Ã—" Foreground="White" FontSize="{StaticResource FontSizeBase}" FontWeight="Bold" Opacity="0.8"/>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- â•â•â• EXPANDED CONTENT (collapsible) â•â•â• -->
            <Border IsVisible="{Binding IsExpanded}"
                    BorderBrush="{DynamicResource BackgroundElevated}" BorderThickness="0,1,0,0"
                    Padding="16,12">
                <StackPanel Spacing="16">
                    <!-- IP/Port/Search Input Row -->
                    <Grid ColumnDefinitions="*,12,*,12,Auto,12,*">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="SOURCE IP" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                            <TextBox Text="{Binding SourceIPInput}"
                                     Watermark="e.g. 192.168.1.0/24"
                                     Background="{DynamicResource BackgroundDark}" BorderBrush="{DynamicResource BorderPrimary}" BorderThickness="1"
                                     Foreground="{DynamicResource TextPrimaryBrush}" CornerRadius="6" Padding="10,6" FontSize="{StaticResource FontSizeBase}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Spacing="4">
                            <TextBlock Text="DESTINATION IP" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                            <TextBox Text="{Binding DestinationIPInput}"
                                     Watermark="e.g. 10.0.0.1"
                                     Background="{DynamicResource BackgroundDark}" BorderBrush="{DynamicResource BorderPrimary}" BorderThickness="1"
                                     Foreground="{DynamicResource TextPrimaryBrush}" CornerRadius="6" Padding="10,6" FontSize="{StaticResource FontSizeBase}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="4" Spacing="4" Width="120">
                            <TextBlock Text="PORT RANGE" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                            <TextBox Text="{Binding PortRangeInput}"
                                     Watermark="e.g. 80-443"
                                     Background="{DynamicResource BackgroundDark}" BorderBrush="{DynamicResource BorderPrimary}" BorderThickness="1"
                                     Foreground="{DynamicResource TextPrimaryBrush}" CornerRadius="6" Padding="10,6" FontSize="{StaticResource FontSizeBase}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="6" Spacing="4">
                            <TextBlock Text="SEARCH (AND FILTER, MATCH ANYWHERE)" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                            <TextBox Text="{Binding SearchInput}"
                                     Watermark="Search all fields..."
                                     Background="{DynamicResource BackgroundDark}" BorderBrush="{DynamicResource BorderPrimary}" BorderThickness="1"
                                     Foreground="{DynamicResource TextPrimaryBrush}" CornerRadius="6" Padding="10,6" FontSize="{StaticResource FontSizeBase}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Category Segmented Control - Order matches main tabs -->
                    <!-- 0=General, 1=Country, 2=VoiceQoS, 3=Threats, 4=Anomalies, 5=Hosts -->
                    <Border Background="{DynamicResource BackgroundCard}" CornerRadius="8" Padding="4">
                        <StackPanel Orientation="Horizontal" Spacing="2">
                            <!-- General (0) - Packet Analysis, Dashboard, Compare -->
                            <RadioButton GroupName="FilterTabs"
                                    IsChecked="{Binding SelectedTabIndex, Mode=TwoWay, Converter={x:Static conv:IndexToBoolConverter.Instance}, ConverterParameter=0}"
                                    Padding="14,8" CornerRadius="6" BorderThickness="0" Cursor="Hand"
                                    Classes="segment-radio">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="General" FontSize="{StaticResource FontSizeBase}"/>
                                    <Ellipse Width="6" Height="6" Fill="{DynamicResource SlackSuccess}" IsVisible="{Binding GeneralHasIncludeFilters}"/>
                                    <Ellipse Width="6" Height="6" Fill="{DynamicResource SlackDanger}" IsVisible="{Binding GeneralHasExcludeFilters}"/>
                                </StackPanel>
                            </RadioButton>
                            <!-- Country (1) - Country Traffic -->
                            <RadioButton GroupName="FilterTabs"
                                    IsChecked="{Binding SelectedTabIndex, Mode=TwoWay, Converter={x:Static conv:IndexToBoolConverter.Instance}, ConverterParameter=1}"
                                    Padding="14,8" CornerRadius="6" BorderThickness="0" Cursor="Hand"
                                    Classes="segment-radio">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="Country" FontSize="{StaticResource FontSizeBase}"/>
                                    <Ellipse Width="6" Height="6" Fill="{DynamicResource SlackSuccess}" IsVisible="{Binding CountryHasIncludeFilters}"/>
                                    <Ellipse Width="6" Height="6" Fill="{DynamicResource SlackDanger}" IsVisible="{Binding CountryHasExcludeFilters}"/>
                                </StackPanel>
                            </RadioButton>
                            <!-- VoiceQoS (2) - Voice/QoS -->
                            <RadioButton GroupName="FilterTabs"
                                    IsChecked="{Binding SelectedTabIndex, Mode=TwoWay, Converter={x:Static conv:IndexToBoolConverter.Instance}, ConverterParameter=2}"
                                    Padding="14,8" CornerRadius="6" BorderThickness="0" Cursor="Hand"
                                    Classes="segment-radio">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="VoiceQoS" FontSize="{StaticResource FontSizeBase}"/>
                                    <Ellipse Width="6" Height="6" Fill="{DynamicResource SlackSuccess}" IsVisible="{Binding VoiceQoSHasIncludeFilters}"/>
                                    <Ellipse Width="6" Height="6" Fill="{DynamicResource SlackDanger}" IsVisible="{Binding VoiceQoSHasExcludeFilters}"/>
                                </StackPanel>
                            </RadioButton>
                            <!-- Threats (3) - Security Threats -->
                            <RadioButton GroupName="FilterTabs"
                                    IsChecked="{Binding SelectedTabIndex, Mode=TwoWay, Converter={x:Static conv:IndexToBoolConverter.Instance}, ConverterParameter=3}"
                                    Padding="14,8" CornerRadius="6" BorderThickness="0" Cursor="Hand"
                                    Classes="segment-radio">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="Threats" FontSize="{StaticResource FontSizeBase}"/>
                                    <Ellipse Width="6" Height="6" Fill="{DynamicResource SlackSuccess}" IsVisible="{Binding ThreatsHasIncludeFilters}"/>
                                    <Ellipse Width="6" Height="6" Fill="{DynamicResource SlackDanger}" IsVisible="{Binding ThreatsHasExcludeFilters}"/>
                                </StackPanel>
                            </RadioButton>
                            <!-- Anomalies (4) - Anomalies -->
                            <RadioButton GroupName="FilterTabs"
                                    IsChecked="{Binding SelectedTabIndex, Mode=TwoWay, Converter={x:Static conv:IndexToBoolConverter.Instance}, ConverterParameter=4}"
                                    Padding="14,8" CornerRadius="6" BorderThickness="0" Cursor="Hand"
                                    Classes="segment-radio">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="Anomalies" FontSize="{StaticResource FontSizeBase}"/>
                                    <Ellipse Width="6" Height="6" Fill="{DynamicResource SlackSuccess}" IsVisible="{Binding AnomaliesHasIncludeFilters}"/>
                                    <Ellipse Width="6" Height="6" Fill="{DynamicResource SlackDanger}" IsVisible="{Binding AnomaliesHasExcludeFilters}"/>
                                </StackPanel>
                            </RadioButton>
                            <!-- Hosts (5) - Host Inventory -->
                            <RadioButton GroupName="FilterTabs"
                                    IsChecked="{Binding SelectedTabIndex, Mode=TwoWay, Converter={x:Static conv:IndexToBoolConverter.Instance}, ConverterParameter=5}"
                                    Padding="14,8" CornerRadius="6" BorderThickness="0" Cursor="Hand"
                                    Classes="segment-radio">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="Hosts" FontSize="{StaticResource FontSizeBase}"/>
                                    <Ellipse Width="6" Height="6" Fill="{DynamicResource SlackSuccess}" IsVisible="{Binding HostInventoryHasIncludeFilters}"/>
                                    <Ellipse Width="6" Height="6" Fill="{DynamicResource SlackDanger}" IsVisible="{Binding HostInventoryHasExcludeFilters}"/>
                                </StackPanel>
                            </RadioButton>
                        </StackPanel>
                    </Border>

                    <!-- Tab Content (using existing TabControl but hidden chrome) -->
                    <!-- Order: 0=General, 1=Country, 2=VoiceQoS, 3=Threats, 4=Anomalies, 5=Hosts -->
                    <TabControl SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}" Background="Transparent">
                        <TabControl.Styles>
                            <!-- Hide tab strip, we use custom segmented control above -->
                            <Style Selector="TabControl > TabItem">
                                <Setter Property="IsVisible" Value="False"/>
                            </Style>
                        </TabControl.Styles>

                        <!-- 0: General Tab Content - Network analysis with security filters -->
                        <TabItem>
                            <StackPanel Spacing="16" DataContext="{Binding GeneralTab}">
                                <!-- L4 Transport Protocols -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="L4 PROTOCOLS" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                                    <ItemsControl ItemsSource="{Binding ProtocolChips}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:FilterChipViewModel">
                                                <Button Content="{Binding DisplayName}" Command="{Binding ToggleCommand}"
                                                        Classes="filter-chip-slack"
                                                        Classes.included="{Binding IsIncluded}"
                                                        Classes.excluded="{Binding IsExcluded}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                <!-- Network Type Filters (Version â†’ Scope â†’ Delivery) -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="NETWORK" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                                    <ItemsControl ItemsSource="{Binding NetworkChips}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:FilterChipViewModel">
                                                <Button Content="{Binding DisplayName}" Command="{Binding ToggleCommand}"
                                                        Classes="filter-chip-slack"
                                                        Classes.included="{Binding IsIncluded}"
                                                        Classes.excluded="{Binding IsExcluded}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                <!-- TCP Flags (all flags exposed) -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="TCP FLAGS" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                                    <ItemsControl ItemsSource="{Binding TcpFlagsChips}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:FilterChipViewModel">
                                                <Button Content="{Binding DisplayName}" Command="{Binding ToggleCommand}"
                                                        Classes="filter-chip-slack"
                                                        Classes.included="{Binding IsIncluded}"
                                                        Classes.excluded="{Binding IsExcluded}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                <!-- L7 Application Protocols -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="APPLICATION" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                                    <ItemsControl ItemsSource="{Binding ApplicationChips}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:FilterChipViewModel">
                                                <Button Content="{Binding DisplayName}" Command="{Binding ToggleCommand}"
                                                        Classes="filter-chip-slack"
                                                        Classes.included="{Binding IsIncluded}"
                                                        Classes.excluded="{Binding IsExcluded}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </StackPanel>
                        </TabItem>

                        <!-- 1: Country Tab Content -->
                        <TabItem>
                            <StackPanel Spacing="12" DataContext="{Binding CountryTab}">
                                <StackPanel Spacing="6">
                                    <TextBlock Text="DIRECTION" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                                    <ItemsControl ItemsSource="{Binding DirectionChips}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:FilterChipViewModel">
                                                <Button Content="{Binding DisplayName}" Command="{Binding ToggleCommand}"
                                                        Classes="filter-chip-slack"
                                                        Classes.included="{Binding IsIncluded}"
                                                        Classes.excluded="{Binding IsExcluded}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                <StackPanel Spacing="6">
                                    <TextBlock Text="REGIONS" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                                    <ItemsControl ItemsSource="{Binding RegionChips}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:FilterChipViewModel">
                                                <Button Content="{Binding DisplayName}" Command="{Binding ToggleCommand}"
                                                        Classes="filter-chip-slack"
                                                        Classes.included="{Binding IsIncluded}"
                                                        Classes.excluded="{Binding IsExcluded}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                <StackPanel Spacing="6">
                                    <TextBlock Text="COUNTRIES" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                                    <ItemsControl ItemsSource="{Binding CountryChips}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:FilterChipViewModel">
                                                <Button Content="{Binding DisplayName}" Command="{Binding ToggleCommand}"
                                                        Classes="filter-chip-slack"
                                                        Classes.included="{Binding IsIncluded}"
                                                        Classes.excluded="{Binding IsExcluded}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </StackPanel>
                        </TabItem>

                        <!-- 2: VoiceQoS Tab Content -->
                        <TabItem>
                            <StackPanel Spacing="16" DataContext="{Binding VoiceQoSTab}">
                                <StackPanel Spacing="8">
                                    <TextBlock Text="CODECS" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                                    <ItemsControl ItemsSource="{Binding CodecChips}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:FilterChipViewModel">
                                                <Button Content="{Binding DisplayName}" Command="{Binding ToggleCommand}"
                                                        Classes="filter-chip-slack"
                                                        Classes.included="{Binding IsIncluded}"
                                                        Classes.excluded="{Binding IsExcluded}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                <StackPanel Spacing="8">
                                    <TextBlock Text="QUALITY" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                                    <ItemsControl ItemsSource="{Binding QualityChips}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:FilterChipViewModel">
                                                <Button Content="{Binding DisplayName}" Command="{Binding ToggleCommand}"
                                                        Classes="filter-chip-slack"
                                                        Classes.included="{Binding IsIncluded}"
                                                        Classes.excluded="{Binding IsExcluded}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </StackPanel>
                        </TabItem>

                        <!-- 3: Threats Tab Content -->
                        <TabItem>
                            <StackPanel Spacing="12" DataContext="{Binding ThreatsTab}">
                                <!-- Dropdowns Row (Category + Threat Type) -->
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="CATEGORY" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                                        <ComboBox SelectedItem="{Binding SelectedCategory}" ItemsSource="{Binding Categories}" Width="160" FontSize="{StaticResource FontSizeBase}"/>
                                    </StackPanel>
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="THREAT TYPE" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                                        <ComboBox SelectedItem="{Binding SelectedThreatType}" ItemsSource="{Binding ThreatTypes}" Width="180" FontSize="{StaticResource FontSizeBase}"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Quick Filters (OR logic) - matches other tab styles -->
                                <StackPanel Spacing="6">
                                    <TextBlock Text="QUICK FILTERS" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                                    <WrapPanel>
                                        <ToggleButton IsChecked="{Binding ShowCriticalOnly}" Classes="filter-chip-toggle" ToolTip.Tip="Critical severity only">
                                            <TextBlock Text="ðŸ”´ Critical" FontSize="{StaticResource FontSizeSmall}"/>
                                        </ToggleButton>
                                        <ToggleButton IsChecked="{Binding ShowHighOnly}" Classes="filter-chip-toggle" ToolTip.Tip="High+ severity">
                                            <TextBlock Text="ðŸŸ  High+" FontSize="{StaticResource FontSizeSmall}"/>
                                        </ToggleButton>
                                        <ToggleButton IsChecked="{Binding IsInsecureProtocolFilterActive}" Classes="filter-chip-toggle" ToolTip.Tip="Insecure protocols">
                                            <TextBlock Text="ðŸ”“ Insecure" FontSize="{StaticResource FontSizeSmall}"/>
                                        </ToggleButton>
                                        <ToggleButton IsChecked="{Binding IsKnownCVEFilterActive}" Classes="filter-chip-toggle" ToolTip.Tip="Known CVEs">
                                            <TextBlock Text="ðŸ›¡ï¸ CVEs" FontSize="{StaticResource FontSizeSmall}"/>
                                        </ToggleButton>
                                        <ToggleButton IsChecked="{Binding IsWeakEncryptionFilterActive}" Classes="filter-chip-toggle" ToolTip.Tip="Weak encryption">
                                            <TextBlock Text="ðŸ” Weak Crypto" FontSize="{StaticResource FontSizeSmall}"/>
                                        </ToggleButton>
                                        <ToggleButton IsChecked="{Binding IsAuthIssuesFilterActive}" Classes="filter-chip-toggle" ToolTip.Tip="Auth issues">
                                            <TextBlock Text="ðŸ”‘ Auth" FontSize="{StaticResource FontSizeSmall}"/>
                                        </ToggleButton>
                                        <ToggleButton IsChecked="{Binding IsCleartextFilterActive}" Classes="filter-chip-toggle" ToolTip.Tip="Cleartext data">
                                            <TextBlock Text="ðŸ“ Cleartext" FontSize="{StaticResource FontSizeSmall}"/>
                                        </ToggleButton>
                                    </WrapPanel>
                                </StackPanel>

                                <!-- Severity Chips -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="SEVERITY FILTER" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                                    <ItemsControl ItemsSource="{Binding SeverityChips}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:FilterChipViewModel">
                                                <Button Content="{Binding DisplayName}" Command="{Binding ToggleCommand}"
                                                        Classes="filter-chip-slack"
                                                        Classes.included="{Binding IsIncluded}"
                                                        Classes.excluded="{Binding IsExcluded}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!-- Category Chips -->
                                <StackPanel Spacing="6">
                                    <TextBlock Text="THREAT CATEGORY" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                                    <ItemsControl ItemsSource="{Binding ThreatCategoryChips}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:FilterChipViewModel">
                                                <Button Content="{Binding DisplayName}" Command="{Binding ToggleCommand}"
                                                        Classes="filter-chip-slack"
                                                        Classes.included="{Binding IsIncluded}"
                                                        Classes.excluded="{Binding IsExcluded}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!-- Security Packet Filters (deprecated crypto, insecure protocols) -->
                                <StackPanel Spacing="6">
                                    <TextBlock Text="SECURITY FILTERS" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                                    <ItemsControl ItemsSource="{Binding SecurityChips}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:FilterChipViewModel">
                                                <Button Content="{Binding DisplayName}" Command="{Binding ToggleCommand}"
                                                        Classes="filter-chip-slack"
                                                        Classes.included="{Binding IsIncluded}"
                                                        Classes.excluded="{Binding IsExcluded}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </StackPanel>
                        </TabItem>

                        <!-- 4: Anomalies Tab Content -->
                        <TabItem>
                            <StackPanel Spacing="16" DataContext="{Binding AnomaliesTab}">
                                <StackPanel Spacing="8">
                                    <TextBlock Text="SEVERITY" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                                    <ItemsControl ItemsSource="{Binding SeverityChips}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:FilterChipViewModel">
                                                <Button Content="{Binding DisplayName}" Command="{Binding ToggleCommand}"
                                                        Classes="filter-chip-slack"
                                                        Classes.included="{Binding IsIncluded}"
                                                        Classes.excluded="{Binding IsExcluded}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                <StackPanel Spacing="8">
                                    <TextBlock Text="CATEGORY" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                                    <ItemsControl ItemsSource="{Binding CategoryChips}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:FilterChipViewModel">
                                                <Button Content="{Binding DisplayName}" Command="{Binding ToggleCommand}"
                                                        Classes="filter-chip-slack"
                                                        Classes.included="{Binding IsIncluded}"
                                                        Classes.excluded="{Binding IsExcluded}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                <StackPanel Spacing="8">
                                    <TextBlock Text="DETECTORS" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                                    <ItemsControl ItemsSource="{Binding DetectorChips}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:FilterChipViewModel">
                                                <Button Content="{Binding DisplayName}" Command="{Binding ToggleCommand}"
                                                        Classes="filter-chip-slack"
                                                        Classes.included="{Binding IsIncluded}"
                                                        Classes.excluded="{Binding IsExcluded}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </StackPanel>
                        </TabItem>

                        <!-- 5: Host Inventory Tab Content -->
                        <TabItem>
                            <StackPanel Spacing="16" DataContext="{Binding HostInventoryTab}">
                                <StackPanel Spacing="8">
                                    <TextBlock Text="OS TYPE" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                                    <ItemsControl ItemsSource="{Binding OsTypeChips}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:FilterChipViewModel">
                                                <Button Content="{Binding DisplayName}" Command="{Binding ToggleCommand}"
                                                        Classes="filter-chip-slack"
                                                        Classes.included="{Binding IsIncluded}"
                                                        Classes.excluded="{Binding IsExcluded}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                <StackPanel Spacing="8">
                                    <TextBlock Text="DEVICE TYPE" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                                    <ItemsControl ItemsSource="{Binding DeviceTypeChips}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:FilterChipViewModel">
                                                <Button Content="{Binding DisplayName}" Command="{Binding ToggleCommand}"
                                                        Classes="filter-chip-slack"
                                                        Classes.included="{Binding IsIncluded}"
                                                        Classes.excluded="{Binding IsExcluded}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                <StackPanel Spacing="8">
                                    <TextBlock Text="HOST ROLE" FontSize="{StaticResource FontSizeSmall}" FontWeight="SemiBold" Foreground="{DynamicResource TextMutedBrush}"/>
                                    <ItemsControl ItemsSource="{Binding HostRoleChips}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:FilterChipViewModel">
                                                <Button Content="{Binding DisplayName}" Command="{Binding ToggleCommand}"
                                                        Classes="filter-chip-slack"
                                                        Classes.included="{Binding IsIncluded}"
                                                        Classes.excluded="{Binding IsExcluded}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </StackPanel>
                        </TabItem>
                    </TabControl>
                </StackPanel>
            </Border>

            <!-- â•â•â• PROMINENT FILTER PROGRESS BAR (sticky footer) â•â•â• -->
            <!-- Visible at bottom of panel during filtering - tall bar with glow effect -->
            <Border IsVisible="{Binding IsApplyingFilter}"
                    Background="{DynamicResource BackgroundDark}"
                    BorderBrush="{DynamicResource AccentPrimary}"
                    BorderThickness="0,2,0,0"
                    CornerRadius="0,0,12,12"
                    Padding="20,14"
                    BoxShadow="0 -4 16 0 #3F51B540">
                <StackPanel Spacing="10">
                    <!-- Status row with icon, message, and percentage -->
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <!-- Three-dot pulsing loader (Slack/Discord style) -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="4"
                                    Margin="0,0,12,0" VerticalAlignment="Center">
                            <Border Width="8" Height="8" CornerRadius="4"
                                    Background="{DynamicResource AccentPrimary}" Classes="pulse-dot-1"/>
                            <Border Width="8" Height="8" CornerRadius="4"
                                    Background="{DynamicResource AccentPrimary}" Classes="pulse-dot-2"/>
                            <Border Width="8" Height="8" CornerRadius="4"
                                    Background="{DynamicResource AccentPrimary}" Classes="pulse-dot-3"/>
                        </StackPanel>
                        <!-- Status message - larger and more prominent -->
                        <TextBlock Grid.Column="1"
                                   Text="{Binding FilterStatusMessage}"
                                   FontSize="{StaticResource FontSizeMedium}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource AccentPrimary}"
                                   VerticalAlignment="Center"/>
                        <!-- Percentage - larger and bold -->
                        <TextBlock Grid.Column="2"
                                   Text="{Binding FilterProgress, StringFormat='{}{0:P0}'}"
                                   FontSize="{StaticResource FontSizeLarge}"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   VerticalAlignment="Center"/>
                    </Grid>
                    <!-- Tall progress bar with glow effect -->
                    <Border CornerRadius="6" ClipToBounds="True">
                        <Grid>
                            <!-- Glow background -->
                            <Border Background="{DynamicResource AccentPrimary}" Opacity="0.15" CornerRadius="6"/>
                            <!-- Track background -->
                            <ProgressBar Height="14"
                                         Background="{DynamicResource BackgroundElevated}"
                                         Foreground="{DynamicResource AccentPrimary}"
                                         Value="{Binding FilterProgress}"
                                         Minimum="0" Maximum="1"
                                         CornerRadius="6"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>

    <UserControl.Styles>
        <!-- Three-dot pulsing loader animations (staggered wave effect) -->
        <!-- Dot 1: starts immediately -->
        <Style Selector="Border.pulse-dot-1">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <ScaleTransform/>
            </Setter>
            <Style.Animations>
                <Animation Duration="0:0:0.6" IterationCount="Infinite" Easing="CubicEaseInOut">
                    <KeyFrame Cue="0%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                        <Setter Property="Opacity" Value="0.4"/>
                    </KeyFrame>
                    <KeyFrame Cue="50%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1.4"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.4"/>
                        <Setter Property="Opacity" Value="1"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                        <Setter Property="Opacity" Value="0.4"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
        <!-- Dot 2: 200ms delay -->
        <Style Selector="Border.pulse-dot-2">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <ScaleTransform/>
            </Setter>
            <Style.Animations>
                <Animation Duration="0:0:0.6" IterationCount="Infinite" Delay="0:0:0.2" Easing="CubicEaseInOut">
                    <KeyFrame Cue="0%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                        <Setter Property="Opacity" Value="0.4"/>
                    </KeyFrame>
                    <KeyFrame Cue="50%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1.4"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.4"/>
                        <Setter Property="Opacity" Value="1"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                        <Setter Property="Opacity" Value="0.4"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
        <!-- Dot 3: 400ms delay -->
        <Style Selector="Border.pulse-dot-3">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <ScaleTransform/>
            </Setter>
            <Style.Animations>
                <Animation Duration="0:0:0.6" IterationCount="Infinite" Delay="0:0:0.4" Easing="CubicEaseInOut">
                    <KeyFrame Cue="0%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                        <Setter Property="Opacity" Value="0.4"/>
                    </KeyFrame>
                    <KeyFrame Cue="50%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1.4"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.4"/>
                        <Setter Property="Opacity" Value="1"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                        <Setter Property="Opacity" Value="0.4"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Mode toggle button styles (Include/Exclude) -->
        <Style Selector="Button.mode-toggle-btn">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="Button.mode-toggle-btn:pointerover">
            <Setter Property="Opacity" Value="0.9"/>
        </Style>
        <Style Selector="Button.mode-toggle-btn.active">
            <Setter Property="Background" Value="{StaticResource SlackSuccess}"/>
        </Style>
        <Style Selector="Button.mode-toggle-btn.exclude.active">
            <Setter Property="Background" Value="{StaticResource SlackDanger}"/>
        </Style>
        <Style Selector="Button.mode-toggle-btn TextBlock.mode-toggle-text">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        </Style>
        <Style Selector="Button.mode-toggle-btn.active TextBlock.mode-toggle-text">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Slack-style filter chips (compact pill shape, border highlight on hover) -->
        <Style Selector="Button.filter-chip-slack">
            <Setter Property="Background" Value="{StaticResource BackgroundElevated}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="Margin" Value="0,0,4,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.15"/>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.1"/>
                </Transitions>
            </Setter>
        </Style>
        <!-- Hover: Keep background color, only highlight border -->
        <Style Selector="Button.filter-chip-slack:pointerover">
            <Setter Property="BorderBrush" Value="{StaticResource AccentCyan}"/>
        </Style>
        <!-- Included (green) state -->
        <Style Selector="Button.filter-chip-slack.included">
            <Setter Property="Background" Value="{StaticResource SlackSuccess}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.filter-chip-slack.included:pointerover">
            <Setter Property="BorderBrush" Value="White"/>
        </Style>
        <!-- Excluded (red) state -->
        <Style Selector="Button.filter-chip-slack.excluded">
            <Setter Property="Background" Value="{StaticResource SlackDanger}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.filter-chip-slack.excluded:pointerover">
            <Setter Property="BorderBrush" Value="White"/>
        </Style>

        <!-- Toggle filter chip (matches filter-chip-slack compact style) -->
        <Style Selector="ToggleButton.filter-chip-toggle">
            <Setter Property="Background" Value="{StaticResource BackgroundElevated}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="Margin" Value="0,0,4,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.15"/>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.1"/>
                </Transitions>
            </Setter>
        </Style>
        <!-- Hover: highlight border -->
        <Style Selector="ToggleButton.filter-chip-toggle:pointerover">
            <Setter Property="BorderBrush" Value="{StaticResource AccentCyan}"/>
        </Style>
        <!-- Checked (green like included) -->
        <Style Selector="ToggleButton.filter-chip-toggle:checked">
            <Setter Property="Background" Value="{StaticResource SlackSuccess}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ToggleButton.filter-chip-toggle:checked:pointerover">
            <Setter Property="BorderBrush" Value="White"/>
        </Style>

        <!-- Segment radio button styles (for tab switching) - underline style like main tabs -->
        <Style Selector="RadioButton.segment-radio">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="12,8,12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid RowDefinitions="*,3">
                        <ContentPresenter Grid.Row="0" Content="{TemplateBinding Content}"
                                          Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="Center"/>
                        <Border x:Name="Underline" Grid.Row="1" Height="3" CornerRadius="1.5"
                                Background="Transparent" Margin="4,0"/>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="RadioButton.segment-radio:pointerover">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        </Style>
        <Style Selector="RadioButton.segment-radio:pointerover /template/ Border#Underline">
            <Setter Property="Background" Value="{StaticResource BackgroundElevated}"/>
        </Style>
        <Style Selector="RadioButton.segment-radio:checked">
            <Setter Property="Foreground" Value="{StaticResource AccentCyan}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="RadioButton.segment-radio:checked /template/ Border#Underline">
            <Setter Property="Background" Value="{StaticResource AccentCyan}"/>
        </Style>
        <Style Selector="RadioButton.segment-radio:checked:pointerover /template/ Border#Underline">
            <Setter Property="Background" Value="{StaticResource AccentBlueLight}"/>
        </Style>
    </UserControl.Styles>
</UserControl>
