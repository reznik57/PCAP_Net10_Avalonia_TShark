                            <TextBlock Text="SHOW matching" FontSize="{StaticResource FontSizeXS}" Foreground="{DynamicResource SlackSuccess}"/>
                        </Border>
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding IncludeIndividualChips}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding ChipBackgroundColor}"
                                        BorderBrush="{Binding ChipBorderColor}" BorderThickness="2"
                                        CornerRadius="12" Padding="10,5" Margin="0,0,6,6"
                                        BoxShadow="0 0 8 #2EA04350">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="+" FontSize="{StaticResource FontSizeBase}" FontWeight="Bold" Foreground="{Binding ChipTextColor}"/>
                                        <TextBlock Text="{Binding DisplayLabel}" FontSize="{StaticResource FontSizeSmall}" Foreground="{Binding ChipTextColor}" FontWeight="SemiBold"/>
                                        <Button Command="{Binding RemoveCommand}"
                                                Background="{DynamicResource BackgroundCard}" BorderBrush="{DynamicResource BorderStrongBrush}" BorderThickness="1"
                                                Padding="4,2" CornerRadius="8"
                                                ToolTip.Tip="Remove this filter">
                                            <TextBlock Text="âœ•" Foreground="{DynamicResource SlackDanger}" FontSize="{StaticResource FontSizeXS}" FontWeight="Bold"/>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Active EXCLUDE Filter Groups (NOT groups) -->
            <Border Background="{DynamicResource BackgroundDark}" BorderBrush="{DynamicResource SlackDanger}" BorderThickness="2"
                    CornerRadius="6" Padding="12,8" IsVisible="{Binding ExcludeFilterGroups.Count}"
                    BoxShadow="0 0 12 #EF444460">
                <StackPanel Spacing="8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ðŸš«" FontSize="{StaticResource FontSizeSmall}"/>
                        <TextBlock Text="ACTIVE Exclusion Groups (NOT):" FontSize="{StaticResource FontSizeSmall}" FontWeight="Bold" Foreground="{DynamicResource SlackDanger}"/>
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding ExcludeFilterGroups}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource BackgroundPanel}" BorderBrush="{DynamicResource SlackDanger}" BorderThickness="2"
                                        CornerRadius="8" Padding="10,6" Margin="0,0,8,8"
                                        BoxShadow="0 0 10 #EF444460">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="ðŸ”¹ ACTIVE NOT GROUP" FontSize="{StaticResource FontSizeXS}" FontWeight="Bold" Foreground="{DynamicResource SlackDanger}" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding DisplayLabel}" FontSize="{StaticResource FontSizeXS}" Foreground="{DynamicResource TextPrimaryBrush}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        <Button Command="{Binding RemoveCommand}"
                                                Background="{DynamicResource BackgroundDark}" BorderBrush="{DynamicResource SlackDanger}" BorderThickness="1"
                                                Padding="6,2" CornerRadius="4"
                                                ToolTip.Tip="Remove this NOT group">
                                            <TextBlock Text="âœ•" Foreground="{DynamicResource SlackDanger}" FontSize="{StaticResource FontSizeXS}" FontWeight="Bold"/>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Active EXCLUDE Individual Chips - With dynamic colors -->
            <Border Background="{DynamicResource BackgroundDark}" BorderBrush="{DynamicResource SlackDanger}" BorderThickness="2"
                    CornerRadius="6" Padding="12,8" IsVisible="{Binding ExcludeIndividualChips.Count}"
                    BoxShadow="0 0 12 #F8514960">
                <StackPanel Spacing="8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ðŸš«" FontSize="{StaticResource FontSizeBase}"/>
                        <TextBlock Text="ACTIVE EXCLUDE Filters" FontSize="{StaticResource FontSizeBase}" FontWeight="Bold" Foreground="{DynamicResource SlackDanger}"/>
                        <Border Background="{DynamicResource BackgroundDark}" CornerRadius="3" Padding="4,1">
                            <TextBlock Text="HIDE matching" FontSize="{StaticResource FontSizeXS}" Foreground="{DynamicResource SlackDanger}"/>
                        </Border>
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding ExcludeIndividualChips}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding ChipBackgroundColor}"
                                        BorderBrush="{Binding ChipBorderColor}" BorderThickness="2"
                                        CornerRadius="12" Padding="10,5" Margin="0,0,6,6"
                                        BoxShadow="0 0 8 #F8514950">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="âˆ’" FontSize="{StaticResource FontSizeInput}" FontWeight="Bold" Foreground="{Binding ChipTextColor}"/>
                                        <TextBlock Text="{Binding DisplayLabel}" FontSize="{StaticResource FontSizeSmall}" Foreground="{Binding ChipTextColor}" FontWeight="SemiBold"/>
                                        <Button Command="{Binding RemoveCommand}"
                                                Background="{DynamicResource BackgroundCard}" BorderBrush="{DynamicResource BorderStrongBrush}" BorderThickness="1"
                                                Padding="4,2" CornerRadius="8"
                                                ToolTip.Tip="Remove this exclusion">
                                            <TextBlock Text="âœ•" Foreground="{DynamicResource SlackDanger}" FontSize="{StaticResource FontSizeXS}" FontWeight="Bold"/>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

        </StackPanel>
    </Border>

    <UserControl.Styles>
        <!-- Quick Filter Toggle Button Base Style -->
        <Style Selector="ToggleButton.quick-filter">
            <Setter Property="Background" Value="{DynamicResource BackgroundPanel}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="ToggleButton.quick-filter:pointerover">
            <Setter Property="Background" Value="{StaticResource BackgroundCard}"/>
        </Style>

        <!-- Blue (Network) -->
        <Style Selector="ToggleButton.quick-filter.blue">
            <Setter Property="BorderBrush" Value="{DynamicResource AccentPrimary}"/>
        </Style>
        <Style Selector="ToggleButton.quick-filter.blue:checked">
            <Setter Property="Background" Value="{StaticResource BackgroundDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentPrimary}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="{StaticResource SlackInfo}"/>
        </Style>
        <Style Selector="ToggleButton.quick-filter.blue:checked:pointerover">
            <Setter Property="Background" Value="{StaticResource BackgroundPanel}"/>
        </Style>

        <!-- Red (Security) -->
        <Style Selector="ToggleButton.quick-filter.red">
            <Setter Property="BorderBrush" Value="{DynamicResource SlackDanger}"/>
        </Style>
        <Style Selector="ToggleButton.quick-filter.red:checked">
            <Setter Property="Background" Value="{StaticResource BackgroundDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SlackDanger}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="{StaticResource SlackDanger}"/>
        </Style>
        <Style Selector="ToggleButton.quick-filter.red:checked:pointerover">
            <Setter Property="Background" Value="{StaticResource BackgroundPanel}"/>
        </Style>

        <!-- Orange (Protocol) -->
        <Style Selector="ToggleButton.quick-filter.orange">
            <Setter Property="BorderBrush" Value="{DynamicResource SlackWarning}"/>
        </Style>
        <Style Selector="ToggleButton.quick-filter.orange:checked">
            <Setter Property="Background" Value="{StaticResource BackgroundDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SlackWarning}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="{StaticResource SlackWarning}"/>
        </Style>
        <Style Selector="ToggleButton.quick-filter.orange:checked:pointerover">
            <Setter Property="Background" Value="{StaticResource BackgroundPanel}"/>
        </Style>

        <!-- Green (Traffic) -->
        <Style Selector="ToggleButton.quick-filter.green">
            <Setter Property="BorderBrush" Value="{DynamicResource SlackSuccess}"/>
        </Style>
        <Style Selector="ToggleButton.quick-filter.green:checked">
            <Setter Property="Background" Value="{StaticResource BackgroundDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SlackSuccess}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="{StaticResource SlackSuccess}"/>
        </Style>
        <Style Selector="ToggleButton.quick-filter.green:checked:pointerover">
            <Setter Property="Background" Value="{StaticResource BackgroundPanel}"/>
        </Style>

        <!-- Purple (Clean View/Noise Reduction) -->
        <Style Selector="ToggleButton.quick-filter.purple">
            <Setter Property="BorderBrush" Value="{DynamicResource AccentPurpleBrush}"/>
        </Style>
        <Style Selector="ToggleButton.quick-filter.purple:checked">
            <Setter Property="Background" Value="{StaticResource BackgroundDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentPurpleBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="{StaticResource AccentPurpleBrush}"/>
        </Style>
        <Style Selector="ToggleButton.quick-filter.purple:checked:pointerover">
            <Setter Property="Background" Value="{StaticResource BackgroundPanel}"/>
        </Style>

        <!-- Mode Toggle (Include/Exclude) -->
        <Style Selector="ToggleButton.mode-toggle">
            <Setter Property="Background" Value="{DynamicResource BackgroundDark}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SlackSuccess}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="{DynamicResource SlackSuccess}"/>
        </Style>
        <Style Selector="ToggleButton.mode-toggle:pointerover">
            <Setter Property="Background" Value="{StaticResource BackgroundPanel}"/>
        </Style>
        <Style Selector="ToggleButton.mode-toggle:checked">
            <Setter Property="Background" Value="{StaticResource BackgroundDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SlackSuccess}"/>
            <Setter Property="Foreground" Value="{StaticResource SlackSuccess}"/>
        </Style>
        <Style Selector="ToggleButton.mode-toggle:unchecked">
            <Setter Property="Background" Value="{StaticResource BackgroundDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SlackDanger}"/>
            <Setter Property="Foreground" Value="{StaticResource SlackDanger}"/>
        </Style>
    </UserControl.Styles>
</UserControl>
