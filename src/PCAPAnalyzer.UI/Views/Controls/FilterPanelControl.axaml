                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="âœ…" FontSize="{StaticResource FontSizeSmall}"/>
                        <TextBlock Text="ACTIVE Filter Groups (OR logic between groups):" FontSize="{StaticResource FontSizeSmall}" FontWeight="Bold" Foreground="{DynamicResource SlackSuccess}"/>
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding IncludeFilterGroups}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource BackgroundPanel}" BorderBrush="{DynamicResource SlackSuccess}" BorderThickness="2"
                                        CornerRadius="8" Padding="10,6" Margin="0,0,8,8"
