                                        <Button Command="{Binding RemoveCommand}"
                                                Background="{DynamicResource BackgroundDark}" BorderBrush="{DynamicResource SlackDanger}" BorderThickness="1"
                                                Padding="6,2" CornerRadius="4"
                                                ToolTip.Tip="Remove this group">
                                            <TextBlock Text="âœ•" Foreground="{DynamicResource SlackDanger}" FontSize="{StaticResource FontSizeXS}" FontWeight="Bold"/>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Active INCLUDE Individual Chips (OR chips) - With dynamic colors -->
            <Border Background="{DynamicResource BackgroundDark}" BorderBrush="{DynamicResource SlackSuccess}" BorderThickness="2"
                    CornerRadius="6" Padding="12,8" IsVisible="{Binding IncludeIndividualChips.Count}"
                    BoxShadow="0 0 12 #2EA04360">
                <StackPanel Spacing="8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="âœ…" FontSize="{StaticResource FontSizeBase}"/>
