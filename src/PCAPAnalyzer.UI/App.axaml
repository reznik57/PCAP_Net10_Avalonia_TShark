<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="using:PCAPAnalyzer.UI.Converters"
             x:Class="PCAPAnalyzer.UI.App"
             RequestedThemeVariant="Dark">

    <Application.Resources>
        <conv:ListToStringConverter x:Key="ListToStringConverter"/>
        <conv:BoolToViewModeConverter x:Key="BoolToViewModeConverter"/>
        <conv:BoolToTextConverter x:Key="BoolToTextConverter"/>
        <conv:CountryCountDisplayConverter x:Key="CountryCountDisplayConverter"/>
        <conv:CountryTableToggleConverter x:Key="CountryTableToggleConverter"/>
        <conv:PercentageToGradientConverter x:Key="PercentageToGradientConverter"/>
        <conv:PercentageToWidthConverter x:Key="PercentageToWidthConverter"/>
        <conv:ByteSizeConverter x:Key="ByteSizeConverter"/>
        <conv:IntToBoolConverter x:Key="IntToBoolConverter"/>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
        <!-- Core unified dark theme -->
        <StyleInclude Source="/Styles/UnifiedDarkTheme.axaml"/>
        <!-- Unified component library (harmonized design) -->
        <StyleInclude Source="/Styles/UnifiedComponents.axaml"/>
        <!-- Loading indicators -->
        <StyleInclude Source="/Styles/LoadingIndicators.axaml"/>
        <!-- Live Capture styles -->
        <StyleInclude Source="/Styles/LiveCaptureStyles.axaml"/>
    </Application.Styles>
</Application>