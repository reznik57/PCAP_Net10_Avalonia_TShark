    </Style>

    <!-- Badge Unified -->
    <Style Selector="Border.badge-unified">
        <Setter Property="Background" Value="{DynamicResource BackgroundElevated}"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusPill}"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="MinWidth" Value="24"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- Export CSV Button -->
    <Style Selector="Button.export-csv">
        <Setter Property="Background" Value="{DynamicResource AccentPrimary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ColorPrimaryHover}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style Selector="Button.export-csv:pointerover">
        <Setter Property="Background" Value="{StaticResource ColorPrimaryHover}"/>
    </Style>

    <!-- Table Header (legacy alias) -->
    <Style Selector="Border.table-header">
        <Setter Property="Background" Value="{DynamicResource BackgroundElevated}"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderSubtleBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>

    <!-- Card Title -->
    <Style Selector="TextBlock.card-title">
        <Setter Property="FontSize" Value="{StaticResource FontSizeMedium}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- Stat Card - Flat, no gradient, no transform -->
    <Style Selector="Border.stat-card, Border.stat-card-modern">
        <Setter Property="Background" Value="{DynamicResource BackgroundCard}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderSubtleBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusLarge}"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="MinHeight" Value="90"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Border.stat-card:pointerover, Border.stat-card-modern:pointerover">
        <Setter Property="BorderBrush" Value="{DynamicResource AccentPrimary}"/>
        <!-- No transform - Slack style -->
    </Style>

    <!-- Control Panel -->
    <Style Selector="Border.control-panel">
        <Setter Property="Background" Value="{DynamicResource BackgroundPanel}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderPrimary}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusXLarge}"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="BoxShadow" Value="0 2 8 0 #00000026"/>
    </Style>

    <!-- Packet Card -->
    <Style Selector="Border.packet-card">
        <Setter Property="Background" Value="{DynamicResource BackgroundCard}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderSubtleBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusLarge}"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>
    
    <!-- ════════════════════════════════════════════════════════════════
         LOADING INDICATORS
         ════════════════════════════════════════════════════════════════ -->
    
    <!-- Progress Bar -->
    <Style Selector="ProgressBar">
        <Setter Property="Foreground" Value="{StaticResource AccentPrimary}"/>
        <Setter Property="Background" Value="{StaticResource BackgroundElevated}"/>
        <Setter Property="Height" Value="4"/>
        <Setter Property="CornerRadius" Value="2"/>
    </Style>
    
    <Style Selector="ProgressBar.loading-bar">
        <Setter Property="Height" Value="6"/>
        <Setter Property="Background" Value="{StaticResource BackgroundDark}"/>
        <Setter Property="Foreground">
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                <GradientStop Offset="0" Color="Transparent"/>
                <GradientStop Offset="0.4" Color="{StaticResource AccentGreen}"/>
                <GradientStop Offset="0.6" Color="{StaticResource AccentGreen}"/>
                <GradientStop Offset="1" Color="Transparent"/>
            </LinearGradientBrush>
        </Setter>
    </Style>
    
    <!-- Loading Spinner -->
    <Style Selector="Border.loading-spinner">
        <Setter Property="Width" Value="60"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="CornerRadius" Value="30"/>
        <Setter Property="BorderThickness" Value="4"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderPrimary}"/>
    </Style>
    
    <!-- Shimmer Effect for Loading Stats -->
    <Style Selector="Border.loading-shimmer">
        <Setter Property="Background">
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                <GradientStop Offset="0" Color="{StaticResource BackgroundLevel3}"/>
                <GradientStop Offset="0.5" Color="{StaticResource BackgroundLevel4}"/>
                <GradientStop Offset="1" Color="{StaticResource BackgroundLevel3}"/>
            </LinearGradientBrush>
        </Setter>
        <Setter Property="Height" Value="20"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusSmall}"/>
        <Setter Property="Opacity" Value="0.7"/>
    </Style>
    
    <!-- Quick Stats Loading -->
    <Style Selector="Border.stats-loading">
        <Setter Property="Background" Value="{StaticResource OverlayDark}"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
        <Setter Property="Padding" Value="16"/>
    </Style>
    
    <!-- ════════════════════════════════════════════════════════════════
         DATA GRID STYLES
         ════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="DataGrid, DataGrid.modern-grid">
        <Setter Property="Background" Value="{StaticResource BackgroundCard}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderPrimary}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
        <Setter Property="RowBackground" Value="{StaticResource BackgroundCard}"/>
        <Setter Property="GridLinesVisibility" Value="Horizontal"/>
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BorderSubtleBrush}"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="RowHeight" Value="40"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBase}"/>
    </Style>
    
    <Style Selector="DataGridColumnHeader">
        <Setter Property="Background" Value="{StaticResource BackgroundElevated}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="Height" Value="44"/>
        <Setter Property="Padding" Value="12,0"/>
        <Setter Property="SeparatorBrush" Value="{StaticResource BorderSubtleBrush}"/>
    </Style>
    
    <Style Selector="DataGridRow">
        <Setter Property="MinHeight" Value="36"/>
    </Style>
    
    <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
        <Setter Property="Fill" Value="{StaticResource AccentPrimary}"/>
        <Setter Property="Opacity" Value="0.2"/>
    </Style>
    
    <Style Selector="DataGridRow:pointerover /template/ Rectangle#BackgroundRectangle">
        <Setter Property="Fill" Value="{StaticResource BackgroundHover}"/>
    </Style>
    
    <Style Selector="DataGridCell">
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBase}"/>
    </Style>
    
    <!-- ════════════════════════════════════════════════════════════════
         TAB CONTROL STYLES - SLACK STYLE
         Borderless tabs, bottom accent line, no boxed appearance
         ════════════════════════════════════════════════════════════════ -->

    <Style Selector="TabControl">
        <Setter Property="Background" Value="{StaticResource BackgroundLevel0}"/>
    </Style>

    <Style Selector="TabItem">
        <Setter Property="FontSize" Value="{StaticResource FontSizeMedium}"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="Margin" Value="0,0,4,0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="BorderThickness" Value="0,0,0,3"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="CornerRadius" Value="8,8,0,0"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Foreground" Duration="0:0:0.15"/>
                <BrushTransition Property="Background" Duration="0:0:0.15"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="TabItem:pointerover">
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="Background" Value="{StaticResource BackgroundLevel3}"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style Selector="TabItem:selected">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{StaticResource ColorPrimary}"/>
        <Setter Property="BorderThickness" Value="0,0,0,3"/>
    </Style>

    <Style Selector="TabItem:selected:pointerover">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="TabItem:disabled">
        <Setter Property="Foreground" Value="{StaticResource TextDisabled}"/>
        <Setter Property="Opacity" Value="0.5"/>
    </Style>
    
    <!-- ════════════════════════════════════════════════════════════════
         INPUT CONTROLS - SLACK STYLE
         ════════════════════════════════════════════════════════════════ -->

    <Style Selector="TextBox, TextBox.modern-input">
        <Setter Property="Background" Value="{StaticResource BackgroundLevel0}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="CaretBrush" Value="{StaticResource ColorPrimary}"/>
        <Setter Property="SelectionBrush" Value="{StaticResource ColorPrimary}"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
        <Setter Property="MinHeight" Value="36"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeInput}"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="TextBox:focus">
        <Setter Property="BorderBrush" Value="{StaticResource ColorPrimary}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <Style Selector="TextBox:pointerover">
        <Setter Property="BorderBrush" Value="{StaticResource BorderStrong}"/>
    </Style>

    <Style Selector="ComboBox, ComboBox.modern-combo">
        <Setter Property="Background" Value="{StaticResource BackgroundLevel0}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
        <Setter Property="MinHeight" Value="36"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeInput}"/>
    </Style>

    <Style Selector="ComboBox:focus">
        <Setter Property="BorderBrush" Value="{StaticResource ColorPrimary}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <Style Selector="ComboBox:pointerover">
        <Setter Property="BorderBrush" Value="{StaticResource BorderStrong}"/>
    </Style>
    
    <!-- ════════════════════════════════════════════════════════════════
         BADGE STYLES
         ════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="Border.badge">
        <Setter Property="CornerRadius" Value="{StaticResource RadiusPill}"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="MinWidth" Value="24"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    
    <Style Selector="Border.badge-blue">
        <Setter Property="Background" Value="{StaticResource BadgeBlue}"/>
    </Style>

    <Style Selector="Border.badge-green">
        <Setter Property="Background" Value="{StaticResource BadgeGreen}"/>
    </Style>

    <Style Selector="Border.badge-red">
        <Setter Property="Background" Value="{StaticResource BadgeRed}"/>
    </Style>

    <Style Selector="Border.badge-yellow">
        <Setter Property="Background" Value="{StaticResource BadgeYellow}"/>
    </Style>

    <Style Selector="Border.badge-purple">
        <Setter Property="Background" Value="{StaticResource BadgePurple}"/>
    </Style>
    
    <!-- ════════════════════════════════════════════════════════════════
         SCROLL VIEWER & SCROLL BAR
         ════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="ScrollViewer">
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
    </Style>
    
    <Style Selector="ScrollBar">
        <Setter Property="Background" Value="{StaticResource BackgroundElevated}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderSubtleBrush}"/>
    </Style>
    
    <Style Selector="ScrollBar /template/ Thumb">
        <Setter Property="Background" Value="{StaticResource BackgroundActive}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderStrongBrush}"/>
        <Setter Property="MinHeight" Value="20"/>
        <Setter Property="MinWidth" Value="10"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>
    
    <Style Selector="ScrollBar:horizontal">
        <Setter Property="Height" Value="14"/>
        <Setter Property="Margin" Value="0,2"/>
    </Style>
    
    <Style Selector="ScrollBar:vertical">
        <Setter Property="Width" Value="14"/>
        <Setter Property="Margin" Value="2,0"/>
    </Style>
    
    <!-- ════════════════════════════════════════════════════════════════
         SEPARATOR
         ════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="Separator">
        <Setter Property="Background" Value="{StaticResource BorderPrimary}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="0,16"/>
    </Style>
    
    <!-- ════════════════════════════════════════════════════════════════
         TOOLTIPS
         ════════════════════════════════════════════════════════════════ -->
    
    <Style Selector="ToolTip">
        <Setter Property="Background" Value="{StaticResource BackgroundLevel6}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderStrongBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusSmall}"/>
    </Style>
    
    <!-- ════════════════════════════════════════════════════════════════
         ANIMATIONS
         ════════════════════════════════════════════════════════════════ -->
    
    <!-- Animation styles will be applied programmatically for better compatibility -->
    
    <!-- ════════════════════════════════════════════════════════════════
         SPECIAL COMPONENTS
         ════════════════════════════════════════════════════════════════ -->
    
    <!-- Threat Level Indicators -->
    <Style Selector="Border.threat-critical">
        <Setter Property="Background" Value="{StaticResource ThreatCritical}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ThreatCriticalBorder}"/>
    </Style>

    <Style Selector="Border.threat-high">
        <Setter Property="Background" Value="{StaticResource ThreatHigh}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ThreatHighBorder}"/>
    </Style>

    <Style Selector="Border.threat-medium">
        <Setter Property="Background" Value="{StaticResource ThreatMedium}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ThreatMediumBorder}"/>
    </Style>

    <Style Selector="Border.threat-low">
        <Setter Property="Background" Value="{StaticResource ThreatLow}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ThreatLowBorder}"/>
    </Style>
    
    <!-- Connection Status -->
    <Style Selector="Ellipse.status-online">
        <Setter Property="Fill" Value="{StaticResource ColorSuccess}"/>
    </Style>
    
    <Style Selector="Ellipse.status-offline">
        <Setter Property="Fill" Value="{StaticResource TextMuted}"/>
    </Style>
    
    <Style Selector="Ellipse.status-error">
        <Setter Property="Fill" Value="{StaticResource ColorDanger}"/>
    </Style>
    
    <Style Selector="Ellipse.status-warning">
        <Setter Property="Fill" Value="{StaticResource ColorWarning}"/>
    </Style>
    
    <!-- Filter Chips - SLACK STYLE (pill shape, no scale) -->
    <Style Selector="ToggleButton.filter-chip">
        <Setter Property="Background" Value="{StaticResource BackgroundLevel3}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusChip}"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBase}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="MinHeight" Value="28"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15"/>
                <BrushTransition Property="Foreground" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="ToggleButton.filter-chip:pointerover">
        <Setter Property="Background" Value="{StaticResource BackgroundLevel4}"/>
        <!-- No scale transform - Slack style -->
    </Style>

    <Style Selector="ToggleButton.filter-chip:checked">
        <Setter Property="Background" Value="{StaticResource ColorPrimary}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style Selector="ToggleButton.filter-chip:checked:pointerover">
        <Setter Property="Background" Value="{StaticResource ColorPrimaryHover}"/>
    </Style>

    <Style Selector="ToggleButton.filter-chip:checked /template/ ContentPresenter">
        <Setter Property="TextBlock.Foreground" Value="White"/>
        <Setter Property="TextBlock.FontWeight" Value="Medium"/>
    </Style>
    
    <!-- Loading/Calculating Styles -->
    <Style Selector="Border.quick-stats-loading">
        <Setter Property="Background">
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Offset="0" Color="{StaticResource PopupBg}"/>
                <GradientStop Offset="1" Color="{StaticResource PopupBgSecondary}"/>
            </LinearGradientBrush>
        </Setter>
        <Setter Property="BorderBrush" Value="{StaticResource BorderPrimary}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusLarge}"/>
        <Setter Property="Padding" Value="24,20"/>
    </Style>
    
    <Style Selector="TextBlock.loading-text">
        <Setter Property="FontSize" Value="{StaticResource FontSizeInput}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <Style Selector="ProgressBar.loading-progress">
        <Setter Property="Height" Value="6"/>
        <Setter Property="Background" Value="{StaticResource BackgroundLevel3}"/>
        <Setter Property="Foreground">
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                <GradientStop Offset="0" Color="{StaticResource GradientBlue}"/>
                <GradientStop Offset="1" Color="{StaticResource GradientGreen}"/>
            </LinearGradientBrush>
        </Setter>
    </Style>
</Styles>